       option zilla:window 8192
       option zilla:transmission "half-duplex"
accepted

read zilla:begin.ext ${filesystem:matchBeginEx()
                                 .typeId(zilla:id("filesystem"))
                                 .capabilities("WRITE_PAYLOAD")
                                 .path("index.html")
                                 .tag("c7183509522eb56e5cf927a3b2e8c15a")
                                 .build()}
connected

