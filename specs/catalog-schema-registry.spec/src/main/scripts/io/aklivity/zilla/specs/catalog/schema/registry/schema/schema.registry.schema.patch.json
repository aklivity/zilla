[
    {
        "op": "add",
        "path": "/$defs/catalog/properties/type/enum/-",
        "value": "schema-registry"
    },
    {
        "op": "add",
        "path": "/$defs/catalog/allOf/-",
        "value":
        {
            "if":
            {
                "properties":
                {
                    "type":
                    {
                        "const": "schema-registry"
                    }
                }
            },
            "then":
            {
                "properties":
                {
                    "type":
                    {
                        "const": "schema-registry"
                    },
                    "vault": true,
                    "options":
                    {
                        "$ref": "#/$defs/options/catalog/schema-registry"
                    }
                },
                "additionalProperties": false
            }
        }
    },
    {
        "op": "add",
        "path": "/$defs/options/catalog/schema-registry",
        "value":
        {
            "title": "Schema Registry",
            "type": "object",
            "properties":
            {
                "url":
                {
                    "type": "string"
                },
                "context":
                {
                    "type": "string",
                    "default": "default"
                },
                "max-age":
                {
                    "title": "Max Age",
                    "type": "integer",
                    "default": 300
                },
                "security":
                {
                    "title": "Security",
                    "type": "object",
                    "properties":
                    {
                        "keys":
                        {
                            "title": "Vault Keys",
                            "type": "array",
                            "items":
                            {
                                "type": "string"
                            }
                        },
                        "trust":
                        {
                            "title": "Vault Certificates",
                            "type": "array",
                            "items":
                            {
                                "type": "string"
                            }
                        },
                        "trustcacerts":
                        {
                            "title": "Trust CA Certificates",
                            "type": "boolean"
                        }
                    }
                },
                "credentials":
                {
                    "title": "Credentials",
                    "type": "object",
                    "properties":
                    {
                        "headers":
                        {
                            "title": "Headers",
                            "type": "object",
                            "properties":
                            {
                                "authorization":
                                {
                                    "type": "string"
                                }
                            },
                            "additionalProperties": false
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        }
    }
]
