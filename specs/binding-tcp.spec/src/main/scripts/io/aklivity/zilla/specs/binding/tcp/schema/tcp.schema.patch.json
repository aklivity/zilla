[
    {
        "op": "add",
        "path": "/$defs/binding/properties/type/enum/-",
        "value": "tcp"
    },
    {
        "op": "add",
        "path": "/$defs/binding/allOf/-",
        "value":
        {
            "if":
            {
               "properties":
                {
                    "type":
                    {
                        "const": "tcp"
                    }
                }
            },
            "then":
            {
                "properties":
                {
                    "type":
                    {
                        "const": "tcp"
                    },
                    "kind":
                    {
                        "enum": [ "server", "client" ]
                    },
                    "vault": false,
                    "options":
                    {
                        "properties":
                        {
                            "host":
                            {
                                "title": "Host",
                                "type": "string"
                            },
                            "port":
                            {
                                "title": "Port",
                                "oneOf":
                                [
                                    {
                                        "type": "integer"
                                    },
                                    {
                                        "type": "string",
                                        "pattern": "^\\d+(-\\d+)?$"
                                    },
                                    {
                                        "type": "array",
                                        "items":
                                        {
                                            "oneOf":
                                            [
                                                {
                                                    "type": "integer"
                                                },
                                                {
                                                    "type": "string",
                                                    "pattern": "^\\d+(-\\d+)?$"
                                                }
                                            ]
                                        }
                                    }
                                ]
                            }
                        },
                        "additionalProperties": false
                    },
                    "routes":
                    {
                        "items":
                        {
                            "properties":
                            {
                                "when":
                                {
                                    "items":
                                    {
                                        "properties":
                                        {
                                            "authority":
                                            {
                                                "title": "Authority",
                                                "type": "string"
                                            },
                                            "cidr":
                                            {
                                                "title": "CIDR Mask",
                                                "type": "string",
                                                "pattern": "^[0-9a-fA-F:.]+/(\\d{1,3})$"
                                            }
                                        },
                                        "additionalProperties": false
                                    }
                                },
                                "with": false
                            }
                        }
                    }
                },
                "oneOf":
                [
                    {
                        "properties":
                        {
                            "kind":
                            {
                                "const": "server"
                            }
                        },
                        "anyOf":
                        [
                            {
                                "required":
                                [
                                    "exit"
                                ]
                            },
                            {
                                "properties":
                                {
                                    "routes":
                                    {
                                        "required":
                                        [
                                            "exit"
                                        ]
                                    }
                                },
                                "required":
                                [
                                    "routes"
                                ]
                            }
                        ]
                    },
                    {
                        "properties":
                        {
                            "kind":
                            {
                                "const": "client"
                            },
                            "routes":
                            {
                                "items":
                                {
                                    "properties":
                                    {
                                        "exit": false
                                    }
                                }
                            },
                            "exit": false
                        }
                    }
                ]
            },
            "else": true
        }
    }
]
