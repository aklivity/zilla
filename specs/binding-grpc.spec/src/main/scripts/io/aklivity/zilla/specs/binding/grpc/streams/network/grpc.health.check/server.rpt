accept "zilla://streams/net0"
  option zilla:window 8192
  option zilla:transmission "half-duplex"
accepted

read zilla:begin.ext ${http:matchBeginEx()
                             .typeId(zilla:id("http"))
                             .header(":method", "POST")
                             .header(":scheme", "http")
                             .header(":authority", "localhost:8080")
                             .header(":path", "/grpc.health.v1.Health")
                             .header("content-type", "application/grpc")
                             .build()}

connected

read [0x00]              # compression flag
     [0x00 0x00 0x00 0x02] # message length (2 bytes)
     [0x08 0x01]           # field 1, varint, value 1 (SERVING)

read closed

write zilla:begin.ext ${http:beginEx()
                              .typeId(zilla:id("http"))
                              .header(":status", "200")
                              .header("content-type", "application/grpc")
                              .header("grpc-encoding", "identity")
                              .build()}
write flush

write [0x00]              # compression flag
      [0x00 0x00 0x00 0x02] # message length (2 bytes)
      [0x08 0x01]           # field 1, varint, value 1 (SERVING)
write flush

write [0x80]                 # flag setting 128
      [0x00 0x00 0x00 0x10]  # Message size
      [0x47 0x72 0x70 0x63 0x2d 0x53 0x74 0x61 0x74 0x75 0x73 0x3a 0x20 0x30 0x0d 0x0a] # grpc-status: 0
write flush

write close

# --- Health Check UNKNOWN ---
accept "zilla://streams/net1"
  option zilla:window 8192
  option zilla:transmission "half-duplex"
accepted

read zilla:begin.ext ${http:matchBeginEx()
                             .typeId(zilla:id("http"))
                             .header(":method", "POST")
                             .header(":scheme", "http")
                             .header(":authority", "localhost:8080")
                             .header(":path", "/grpc.health.v1.Health/Check")
                             .header("content-type", "application/grpc")
                             .build()}

connected

read [0x00]              # compression flag
     [0x00 0x00 0x00 0x02] # message length (3 bytes)
     [0x08 0x00]           # field 1, varint, value 0 (UNKNOWN)

read closed

write zilla:begin.ext ${http:beginEx()
                              .typeId(zilla:id("http"))
                              .header(":status", "200")
                              .header("content-type", "application/grpc")
                              .header("grpc-encoding", "identity")
                              .build()}
write flush

write [0x00]              # compression flag
      [0x00 0x00 0x00 0x02] # message length (3 bytes)
      [0x08 0x00]           # field 1, varint, value 0 (UNKNOWN)
write flush

write [0x80]                 # flag setting 128
      [0x00 0x00 0x00 0x10]  # Message size
      [0x47 0x72 0x70 0x63 0x2d 0x53 0x74 0x61 0x74 0x75 0x73 0x3a 0x20 0x30 0x0d 0x0a] # grpc-status: 0
write flush

write close