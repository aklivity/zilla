connect "zilla://streams/net0"
  option zilla:window 8192
  option zilla:transmission "half-duplex"

write zilla:begin.ext ${http:beginEx()
                            .typeId(zilla:id("http"))
                            .header(":scheme", "http")
                            .header(":method", "GET")
                            .header(":path", "/events/a8b7c6d5")
                            .header(":authority", "localhost:8080")
                            .header("accept", "text/event-stream")
                            .header("last-event-id", "012345678901234567890123456789012345678901234567890123456789012345678901234567890123456789012345678901234567890123456789012345678901234567890123456789012345678901234567890123456789012345678901234567890123456789012345678901234567890123456789012345678912345")
                            .build()}

connected

write close

read zilla:begin.ext ${http:matchBeginEx()
                           .typeId(zilla:id("http"))
                           .header(":status", "400")
                           .header("content-length", "0")
                           .build()}
