accept "zilla://streams/app0"
       option zilla:window 8192
       option zilla:transmission "duplex"
accepted

read zilla:begin.ext ${sse:beginEx()
                          .typeId(zilla:id("sse"))
                          .pathInfo("/events/a8b7c6d5")
                          .lastEventId(null)
                          .build()}

connected

write zilla:data.ext ${sse:dataEx()
                          .typeId(zilla:id("sse"))
                          .timestamp(1519937168533)
                          .id("105")
                          .type(null)
                          .build()}
write "Hello, world"
write flush
