connect "zilla://streams/net0"
  option zilla:window 8192
  option zilla:transmission "duplex"
  option zilla:byteorder "network"

connected

write [0x10 0x12]                   # CONNECT
      [0x00 0x04] "MQTT"            # protocol name
      [0x04]                        # protocol version
      [0x02]                        # flags = clean start
      [0x00 0x3c]                   # keep alive = 60s
      [0x00 0x06] "client"          # client id

read  [0x20 0x02]                   # CONNACK
      [0x00]                        # flags = none
      [0x00]                        # reason code

write [0x82 0x0f]                   # SUBSCRIBE
      [0x00 0x01]                   # packet id = 1
      [0x00 0x0a] "sensor/+/#"      # topic filter
      [0x01]                        # options = at-least-once, send retained

read  [0x90 0x03]                   # SUBACK
      [0x00 0x01]                   # packet id = 1
      [0x01]                        # reason code = qos1

write [0x82 0x0f]                   # SUBSCRIBE
      [0x00 0x02]                   # packet id = 2
      [0x00 0x0a] "sensor/+/1"      # topic filter
      [0x02]                        # options = exactly-once, send retained

read  [0x90 0x03]                   # SUBACK
      [0x00 0x02]                   # packet id = 2
      [0x02]                        # reason code = qos2

read  [0x32 0x17]                   # PUBLISH, qos = 1
      [0x00 0x0c] "sensor/one/1"    # topic name
      [0x00 0x01]                   # packet id = 1
      "message"                     # payload

read  [0x34 0x17]                   # PUBLISH, qos = 2
      [0x00 0x0c] "sensor/one/1"    # topic name
      [0x00 0x01]                   # packet id = 1
      "message"                     # payload

write [0x40 0x03]                   # PUBACK
      [0x00 0x01]                   # packet id = 1
      [0x00]                        # reason code

write [0x50 0x03]                   # PUBREC
      [0x00 0x01]                   # packet id = 1
      [0x00]                        # reason code

read  [0x60 0x03]                   # PUBREL
      [0x00 0x01]                   # packet id = 1
      [0x00]                        # reason code

write [0x70 0x03]                   # PUBCOMP
      [0x00 0x01]                   # packet id = 1
      [0x00]                        # reason code
