connect "zilla://streams/net0"
  option zilla:window 8192
  option zilla:transmission "duplex"

write zilla:begin.ext ${proxy:beginEx()
                             .typeId(zilla:id("proxy"))
                             .addressNone()
                               .build()
                             .info()
                               .secure()
                                 .version("TLSv1.3")
                                 .build()
                               .build()
                             .build()}

connected

write "GET / HTTP/1.1" "\r\n"
      "Host: example.com:9090" "\r\n"
      "Authorization: Bearer TOKEN" "\r\n"
      "\r\n"
write flush

write close

read "HTTP/1.1 200 OK" "\r\n"
     "Server: Zilla" "\r\n"
     "Date: Tue, 02 Feb 2022 22:22:22 GMT" "\r\n"
     "Content-Type: text/event-stream; charset=UTF-8" "\r\n"
     "Connection: close" "\r\n"
     "\r\n"

read "data:Hello, world\n"
     "\n"

read "type:challenge\n"
     "data:"
     "{"
         "\"method\":\"POST\","
         "\"url\":\"https://example.com:9090/\","
         "\"headers\":"
         "{"
             "\"content-type\":\"application/x-challenge-response\""
         "}"
     "}\n"
     "\n"

read notify RECEIVED_CHALLENGE

connect await RECEIVED_CHALLENGE
  "zilla://streams/net0"
  option zilla:window 8192
  option zilla:transmission "duplex"

write zilla:begin.ext ${proxy:beginEx()
                             .typeId(zilla:id("proxy"))
                             .addressNone()
                               .build()
                             .info()
                               .secure()
                                 .version("TLSv1.3")
                                 .build()
                               .build()
                             .build()}

connected

write "GET / HTTP/1.1" "\r\n"
      "Host: example.com:9090" "\r\n"
      "Authorization: Bearer TOKEN" "\r\n"
      "\r\n"
write flush

read "HTTP/1.1 204 OK" "\r\n"
     "Server: Zilla" "\r\n"
     "Date: Tue, 02 Feb 2022 22:22:22 GMT" "\r\n"
     "\r\n"
