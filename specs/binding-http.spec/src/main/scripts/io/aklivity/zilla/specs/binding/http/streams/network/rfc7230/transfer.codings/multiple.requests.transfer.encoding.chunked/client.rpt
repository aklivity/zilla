connect "http://localhost:8080/"
  option http:transport "zilla://streams/net0"
  option zilla:window 8192
  option zilla:transmission "duplex"
connected

write http:method "POST"
write http:host
write http:header "Content-Type" "text/plain"
write http:header "Transfer-Encoding" "chunked"
write "Chunk A"
write "Chunk B"
write "Chunk C"
write close

read http:status "200" "OK"

read notify RESPONSE_ONE_RECEIVED

connect await RESPONSE_ONE_RECEIVED
        "http://localhost:8080/"
  option http:transport "zilla://streams/net0"
  option zilla:window 8192
  option zilla:transmission "duplex"
connected

write http:method "POST"
write http:host
write http:header "Content-Type" "text/plain"
write http:header "Transfer-Encoding" "chunked"
write "1"
write "12"
write "12345"
write close

read http:status "200" "OK"
