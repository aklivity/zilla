connect "zilla://streams/net0"
        option zilla:window 40000
        option zilla:transmission "duplex"
connected

write "PRI * HTTP/2.0\r\n"
      "\r\n"
      "SM\r\n"
      "\r\n"
write flush

read [0x00 0x00 0x18]                                      # length = 24
     [0x04]                                                # HTTP2 SETTINGS frame
     [0x00]                                                # flags = 0x00
     [0x00 0x00 0x00 0x00]                                 # stream_id = 0
     [0x00 0x03 0x00 0x00 0x00 0x64]                       # SETTINGS_MAX_CONCURRENT_STREAMS(0x03) = 100
     [0x00 0x04 0x00 0x00 0x00 0x00]                       # SETTINGS_INITIAL_WINDOW_SIZE(0x04) = 0
     [0x00 0x06 0x00 0x00 0x20 0x00]                       # SETTINGS_MAX_HEADER_LIST_SIZE(0x06) = 8192
     [0x00 0x08 0x00 0x00 0x00 0x01]                       # SETTINGS_ENABLE_CONNECT_PROTOCOL(0x08) = true

write [0x00 0x00 0x0c]                                     # length = 12
      [0x04]                                               # HTTP2 SETTINGS frame
      [0x00]                                               # flags = 0x00
      [0x00 0x00 0x00 0x00]                                # stream_id = 0
      [0x00 0x03 0x00 0x00 0x00 0x64]                      # SETTINGS_MAX_CONCURRENT_STREAMS(0x03) = 100
      [0x00 0x04 0x00 0x00 0xff 0xff]                      # SETTINGS_INITIAL_WINDOW_SIZE(0x04) = 65535
write flush

read [0x00 0x00 0x00]                                      # length = 0
     [0x04]                                                # HTTP2 SETTINGS frame
     [0x01]                                                # ACK
     [0x00 0x00 0x00 0x00]                                 # stream_id = 0

write [0x00 0x00 0x00]                                     # length = 0
      [0x04]                                               # HTTP2 SETTINGS frame
      [0x01]                                               # ACK
      [0x00 0x00 0x00 0x00]                                # stream_id = 0
write flush

write [0x00 0x00 0x6c]                                     # length = 108
      [0x01]                                               # HEADERS frame
      [0x05]                                               # END_HEADERS | END_STREAM
      [0x00 0x00 0x00 0x01]                                # stream_id = 1
      [0x40] [0x07] ":method" [0x07] "OPTIONS"             # :method: OPTIONS
      [0x87]                                               # :scheme: https
      [0x84]                                               # :path: /
      [0x01] [0x10] "example.com:9090"                     # :authority: example.com:9090
      [0x40] [0x06] "origin"
             [0x18] "https://example.net:9090"             # origin
      [0x40] [0x1d] "access-control-request-method"
             [0x06] "DELETE"                               # access-control-request-method
write flush

read [0x00 0x00 0x2d]                                      # length 45
     [0x01]                                                # HTTP2 HEADERS frame
     [0x05]                                                # END_HEADERS | END_STREAM
     [0x00 0x00 0x00 0x01]                                 # stream_id = 1
     [0x89]                                                # :status: 204
     [0x0f] [0x27] [0x05] "Zilla"                          # server
     [0x0f] [0x05] [0x01] "*"                              # access-control-allow-origin
     [0x00] [0x1c] "access-control-allow-methods"
            [0x01] "*"                                     # access-control-allow-methods

write [0x00 0x00 0x45]                                     # length = 70
      [0x01]                                               # HEADERS frame
      [0x05]                                               # END_HEADERS | END_STREAM
      [0x00 0x00 0x00 0x03]                                # stream_id = 3
      [0x40] [0x07] ":method" [0x06] "DELETE"              # :method: DELETE
      [0x87]                                               # :scheme: https
      [0x84]                                               # :path: /
      [0x01] [0x10] "example.com:9090"                     # :authority: example.com:9090
      [0x40] [0x06] "origin"
             [0x18] "https://example.net:9090"             # origin: https://example.net:9090
write flush

read [0x00 0x00 0x2d]                                      # length = 45
     [0x01]                                                # HTTP2 HEADERS frame
     [0x04]                                                # END_HEADERS
     [0x00 0x00 0x00 0x03]                                 # stream_id = 3
     [0x89]                                                # :status: 204
     [0x0f] [0x27] [0x05] "Zilla"                          # server
     [0x0f] [0x12] [0x1d] "Tue, 02 Feb 2022 22:22:22 GMT"  # date
     [0x0f] [0x05] [0x01] "*"                              # access-control-allow-origin
