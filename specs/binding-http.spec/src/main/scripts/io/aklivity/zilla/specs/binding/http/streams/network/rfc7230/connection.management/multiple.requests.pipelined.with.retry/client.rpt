connect "zilla://streams/net0"
  option zilla:window 8192
  option zilla:transmission "duplex"
connected

write "GET /request1 HTTP/1.1" "\r\n"
write "Host: localhost:8080" "\r\n"
write "\r\n"

write "GET /request2 HTTP/1.1" "\r\n"
write "Host: localhost:8080" "\r\n"
write "\r\n"

write "GET /request3 HTTP/1.1" "\r\n"
write "Host: localhost:8080" "\r\n"
write "\r\n"

read abort
read notify REPLAY_REQUESTS

connect await REPLAY_REQUESTS
        "zilla://streams/net0"
  option zilla:window 8192
  option zilla:transmission "duplex"
connected

# First request must now not be pipelined
write "GET /request1 HTTP/1.1" "\r\n"
write "Host: localhost:8080" "\r\n"
write "\r\n"

read "HTTP/1.1 200 OK\r\n"
read "Content-Length: 9\r\n"
read "\r\n"
read "response1"

write "GET /request2 HTTP/1.1" "\r\n"
write "Host: localhost:8080" "\r\n"
write "\r\n"

write "GET /request3 HTTP/1.1" "\r\n"
write "Host: localhost:8080" "\r\n"
write "\r\n"

read "HTTP/1.1 200 OK\r\n"
read "Content-Length: 9\r\n"
read "\r\n"
read "response2"

read "HTTP/1.1 200 OK\r\n"
read "Content-Length: 9\r\n"
read "\r\n"
read "response3"
