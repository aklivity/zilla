                                        "title": "Policy",
                                        "type": "string",
                                        "enum": [ "same-origin" , "cross-origin" ],
                                        "default": "same-origin"
                                    }
                                },
                                "oneOf":
                                [
                                    {
                                        "properties":
                                        {
                                            "policy":
                                            {
                                                "const": "same-origin"
                                            }
                                        }
