                                                "properties":
                                                {
                                                    "headers":
                                                    {
                                                        "title": "Headers",
                                                        "type": "array",
                                                        "items":
                                                        {
                                                            "type": "string"
                                                        }
                                                    }
                                                },
                                                "additionalProperties": false
                                            }
                                        },
                                        "additionalProperties": false
                                    }
                                ]
                            },
                            "authorization":
                            {
                                "$ref": "#/$defs/options/binding/http/authorization"
