connect "zilla://streams/net0"
  option zilla:window 8192
  option zilla:transmission "duplex"

write zilla:begin.ext ${proxy:beginEx()
                             .typeId(zilla:id("proxy"))
                             .addressNone()
                               .build()
                             .info()
                               .secure()
                                 .version("TLSv1.3")
                                 .build()
                               .build()
                             .build()}

connected

write "OPTIONS / HTTP/1.1" "\r\n"
      "Host: example.com:9090" "\r\n"
      "Origin: https://example.net:9090" "\r\n"
      "Access-Control-Request-Method: PATCH" "\r\n"
      "\r\n"
write flush

write close

read "HTTP/1.1 403 Forbidden" "\r\n"
     "Server: Zilla" "\r\n"
     "Connection: close" "\r\n"
     "\r\n"

read closed
