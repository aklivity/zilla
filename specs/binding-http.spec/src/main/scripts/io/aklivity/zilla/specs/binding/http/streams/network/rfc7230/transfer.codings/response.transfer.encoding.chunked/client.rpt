property clientInitialWindow 8192

connect "http://localhost:8080/"
  option http:transport "zilla://streams/net0"
  option zilla:window ${clientInitialWindow}
  option zilla:transmission "duplex"
connected

write http:method "GET"
write http:host
write http:content-length
write close

read http:status "200" "OK"
read http:header "Transfer-Encoding" "chunked"
read "Chunk A;"
read "Chunk B;"
read "Chunk C;"
read closed
