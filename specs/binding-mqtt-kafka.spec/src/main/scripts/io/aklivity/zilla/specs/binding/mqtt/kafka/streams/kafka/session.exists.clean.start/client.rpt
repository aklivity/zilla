                             .produce()
                               .deferred(0)
                               .partition(-1, -1)
                               .key("client-1#will-signal")
                               .hashKey("client-1")
                               .build()
                           .build()}
write ${mqtt:sessionSignal()
            .will()
                .instanceId("zilla-1")
                .clientId("client-1")
                .delay(0)
                .deliverAt(1000)
                .build()
            .build()}
write flush

write close
read closed

write notify SESSION1_CLOSED

connect await SESSION1_CLOSED
        "zilla://streams/kafka0"
         option zilla:window 8192
         option zilla:transmission "duplex"

write zilla:begin.ext ${kafka:beginEx()
                            .typeId(zilla:id("kafka"))
                            .merged()
                                .capabilities("FETCH_ONLY")
                                .topic("mqtt-messages")
                                .filter()
                                    .headers("zilla:filter")
                                        .sequence("sensor")
                                        .sequence("one")
                                        .build()
                                    .build()
                                .evaluation("EAGER")
                                .build()
                            .build()}

connected

write close
