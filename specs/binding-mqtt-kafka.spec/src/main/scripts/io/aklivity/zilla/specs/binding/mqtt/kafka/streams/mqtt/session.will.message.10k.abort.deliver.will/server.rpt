accept "zilla://streams/mqtt0"
        option zilla:window 8192
        option zilla:transmission "duplex"

accepted

read zilla:begin.ext ${mqtt:matchBeginEx()
                             .typeId(zilla:id("mqtt"))
                             .session()
                                .flags("WILL", "SHARDING")
                                .expiry(1)
                                .clientId("client-1")
                                .build()
                             .build()}

connected


read zilla:data.ext ${mqtt:dataEx()
                             .typeId(zilla:id("mqtt"))
                             .session()
                                .deferred(2330)
                                .kind("WILL")
                                .build()
                             .build()}

read ${mqtt:will()
               .topic("obituaries")
               .delay(1)
               .expiryInterval(15)
               .format("TEXT")
               .responseTopic("responses/client1")
               .correlation("info")
               .payloadSize(10240)
               .build()}
read [0..10240]

write zilla:data.empty
write flush

read aborted
write abort
