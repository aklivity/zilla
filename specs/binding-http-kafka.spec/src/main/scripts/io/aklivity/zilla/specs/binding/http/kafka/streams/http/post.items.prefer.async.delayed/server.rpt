accept "zilla://streams/http0"
       option zilla:window 8192
       option zilla:transmission "half-duplex"
accepted

read zilla:begin.ext ${http:matchBeginEx()
                           .typeId(zilla:id("http"))
                           .header(":method", "POST")
                           .header(":path", "/items")
                           .header("content-type", "application/json")
                           .header("idempotency-key", "92d0bf92-63e0-4cfc-ae73-71dee92d1544")
                           .header("prefer", "respond-async")
                           .build()}

connected

read '{ "name": "widget" }'

read closed

write zilla:begin.ext ${http:beginEx()
                            .typeId(zilla:id("http"))
                            .header(":status", "202")
                            .header("location", "/items;92d0bf92-63e0-4cfc-ae73-71dee92d1544-82cb37c4337a427e1884f91fa6070120")
                            .build()}

write flush

write close


accepted

read zilla:begin.ext ${http:matchBeginEx()
                           .typeId(zilla:id("http"))
                           .header(":method", "GET")
                           .header(":path", "/items;92d0bf92-63e0-4cfc-ae73-71dee92d1544-82cb37c4337a427e1884f91fa6070120")
                           .build()}

connected

read closed

write zilla:begin.ext ${http:beginEx()
                            .typeId(zilla:id("http"))
                            .header(":status", "202")
                            .header("location", "/items;92d0bf92-63e0-4cfc-ae73-71dee92d1544-82cb37c4337a427e1884f91fa6070120")
                            .build()}

write flush

write close


accepted

read zilla:begin.ext ${http:matchBeginEx()
                           .typeId(zilla:id("http"))
                           .header(":method", "GET")
                           .header(":path", "/items;92d0bf92-63e0-4cfc-ae73-71dee92d1544-82cb37c4337a427e1884f91fa6070120")
                           .build()}

connected

read closed

write zilla:begin.ext ${http:beginEx()
                            .typeId(zilla:id("http"))
                            .header(":status", "201")
                            .header("location", "/items/92d0bf92-63e0-4cfc-ae73-71dee92d1544")
                            .build()}

write flush

write '{ "name": "widget" }'

write close
