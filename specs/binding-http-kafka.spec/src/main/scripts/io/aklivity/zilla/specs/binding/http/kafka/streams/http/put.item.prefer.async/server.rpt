accept "zilla://streams/http0"
       option zilla:window 8192
       option zilla:transmission "half-duplex"
accepted

read zilla:begin.ext ${http:matchBeginEx()
                           .typeId(zilla:id("http"))
                           .header(":method", "PUT")
                           .header(":path", "/items/92d0bf92-63e0-4cfc-ae73-71dee92d1544")
                           .header("content-type", "application/json")
                           .header("content-length", "20")
                           .header("idempotency-key", "3f96592e-c8f1-4167-8c46-85f2aabb70a5")
                           .header("prefer", "respond-async")
                           .build()}

connected

read '{ "name": "widget" }'

read closed

write zilla:begin.ext ${http:beginEx()
                            .typeId(zilla:id("http"))
                            .header(":status", "202")
                            .header("location", "/items/92d0bf92-63e0-4cfc-ae73-71dee92d1544;3f96592e-c8f1-4167-8c46-85f2aabb70a5-ee284177921a96f23e9b3166f12ca058")
                            .build()}

write flush

write close


accepted

read zilla:begin.ext ${http:matchBeginEx()
                           .typeId(zilla:id("http"))
                           .header(":method", "GET")
                           .header(":path", "/items/92d0bf92-63e0-4cfc-ae73-71dee92d1544;3f96592e-c8f1-4167-8c46-85f2aabb70a5-ee284177921a96f23e9b3166f12ca058")
                           .build()}

connected

read closed

write zilla:begin.ext ${http:beginEx()
                            .typeId(zilla:id("http"))
                            .header(":status", "204")
                            .build()}

write flush

write close
