accept "http://localhost:8080/"
accepted
connected

read http:method "GET"
read http:header "If-None-Match"
read http:header "Prefer" "wait=86400"
read closed

write http:status "200" "OK"
write http:content-length
write '---\n'
     'name: test\n'
     'bindings:\n'
     '  net0:\n'
     '    type: test\n'
     '    kind: proxy\n'
     '    exit: app0\n'
write close

accepted
connected

read http:method "GET"
read http:header "If-None-Match"
read http:header "Prefer" "wait=86400"
read closed

write await CONNECTED
write http:status "200" "OK"
write http:content-length
write '---\n'
     'name: test\n'
     'bindings:\n'
     '  net1:\n'
     '    type: test\n'
     '    kind: proxy\n'
     '    exit: app1\n'
write close


accept "zilla://streams/app0"
     option zilla:window 8192
     option zilla:transmission "duplex"

accepted
connected
write notify CONNECTED

read aborted
write aborted

accept "zilla://streams/app1"
     option zilla:window 8192
     option zilla:transmission "duplex"

accepted
connected

