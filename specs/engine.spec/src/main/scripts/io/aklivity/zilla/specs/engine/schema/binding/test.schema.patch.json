[
    {
        "op": "add",
        "path": "/$defs/binding/properties/type/enum/-",
        "value": "test"
    },
    {
        "op": "add",
        "path": "/$defs/binding/allOf/-",
        "value":
        {
            "if":
            {
               "properties":
                {
                    "type":
                    {
                        "const": "test"
                    }
                }
            },
            "then":
            {
                "properties":
                {
                    "type":
                    {
                        "const": "test"
                    },
                    "kind":
                    {
                        "enum": [ "server", "proxy" ]
                    },
                    "options":
                    {
                        "title": "Options",
                        "type": "object",
                        "properties":
                        {
                            "schema":
                            {
                                "type": "string"
                            },
                            "value":
                            {
                                "$ref": "#/$defs/converter"
                            },
                            "catalog":
                            {
                                "type": "object",
                                "patternProperties":
                                {
                                    "^[a-zA-Z]+[a-zA-Z0-9\\._\\-]*$":
                                    {
                                        "type": "array",
                                        "items":
                                        {
                                            "$ref": "#/$defs/cataloged"
                                        }
                                    }
                                },
                                "maxProperties": 1
                            },
                            "assertions":
                            {
                                "title": "Assertions",
                                "type": "object",
                                "properties":
                                {
                                    "catalog":
                                    {
                                        "type": "object",
                                        "patternProperties":
                                        {
                                            "^[a-zA-Z]+[a-zA-Z0-9\\._\\-]*$":
                                            {
                                                "type": "array",
                                                "items":
                                                {
                                                    "type": "object",
                                                    "properties":
                                                    {
                                                        "id":
                                                        {
                                                            "type": "integer"
                                                        },
                                                        "schema":
                                                        {
                                                            "type": ["string", "null"]
                                                        },
                                                        "delay":
                                                        {
                                                            "type": "number"
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        "maxProperties": 1
                                    },
                                    "vault":
                                    {
                                        "type": "object",
                                        "properties":
                                        {
                                            "key":
                                            {
                                                "type": "String"
                                            },
                                            "signer":
                                            {
                                                "type": "String"
                                            },
                                            "trust":
                                            {
                                                "type": "String"
                                            }
                                        }
                                    }
                                }
                            },
                            "port":
                            {
                                "title": "Port",
                                "oneOf":
                                [
                                    {
                                        "type": "integer"
                                    },
                                    {
                                        "type": "string",
                                        "pattern": "^\\d+(-\\d+)?$"
                                    },
                                    {
                                        "type": "array",
                                        "items":
                                        {
                                            "oneOf":
                                            [
                                                {
                                                    "type": "integer"
                                                },
                                                {
                                                    "type": "string",
                                                    "pattern": "^\\d+(-\\d+)?$"
                                                }
                                            ]
                                        }
                                    }
                                ]
                            },
                            "authorization":
                            {
                                "type": "object",
                                "properties":
                                {
                                    "type": "object",
                                    "patternProperties":
                                    {
                                        "^[a-zA-Z]+[a-zA-Z0-9\\._\\-]*$":
                                        {
                                            "type": "object",
                                            "properties":
                                            {
                                                "credentials":
                                                {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                }
                            },
                            "events":
                            {
                                "type": "array",
                                "items":
                                {
                                    "type": "object",
                                    "properties":
                                    {
                                        "timestamp":
                                        {
                                            "type": "integer"
                                        },
                                        "message":
                                        {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        },
                        "additionalProperties": false
                    }
                },
                "anyOf":
                [
                    {
                        "required":
                        [
                            "exit"
                        ]
                    },
                    {
                        "required":
                        [
                            "routes"
                        ]
                    }
                ]
            }
        }
    }
]
