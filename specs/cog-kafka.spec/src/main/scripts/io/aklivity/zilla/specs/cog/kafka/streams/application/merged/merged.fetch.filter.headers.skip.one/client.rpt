connect "zilla://streams/app0"
    option zilla:window 16
    option zilla:transmission "half-duplex"

write zilla:begin.ext ${kafka:beginEx()
                               .typeId(zilla:id("kafka"))
                               .merged()
                                   .capabilities("FETCH_ONLY")
                                   .topic("test")
                                   .partition(0, 1)
                                   .partition(1, 1)
                                   .filter()
                                       .headers("header3")
                                          .sequence("one")
                                          .skip(1)
                                          .build()
                                       .build()
                                   .build()
                               .build()}

connected

read zilla:data.ext ${kafka:matchDataEx()
                             .typeId(zilla:id("kafka"))
                             .merged()
                                 .partition(1, 5, 6)
                                 .progress(0, 6)
                                 .progress(1, 6)
                                 .header("header3", "one")
                                 .header("header3", "")
                                 .build()
                             .build()}
read "Hello, world #B5"
