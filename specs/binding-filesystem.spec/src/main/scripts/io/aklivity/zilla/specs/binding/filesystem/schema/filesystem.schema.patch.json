[
    {
        "op": "add",
        "path": "/$defs/binding/properties/type/enum/-",
        "value": "filesystem"
    },
    {
        "op": "add",
        "path": "/$defs/binding/allOf/-",
        "value":
        {
            "if":
            {
               "properties":
                {
                    "type":
                    {
                        "const": "filesystem"
                    }
                }
            },
            "then":
            {
                "properties":
                {
                    "type":
                    {
                        "const": "filesystem"
                    },
                    "kind":
                    {
                        "enum": [ "server" ]
                    },
                    "vault": false,
                    "options":
                    {
                        "properties":
                        {
                            "location":
                            {
                                "title": "Location",
                                "type": "string"
                            },
                            "symlinks":
                            {
                                "title": "Symbolic Links",
                                "type": "string",
                                "enum": [ "follow", "ignore" ],
                                "default": "ignore"
                            }
                        },
                        "additionalProperties": false
                    },
                    "routes": false,
                    "exit": false
                }
            }
        }
    }
]
