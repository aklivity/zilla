connect "zilla://streams/net#0"
  option zilla:window 8192
  option zilla:transmission "duplex"
connected

write "GET /request1 HTTP/1.1\r\n"
write "Host: localhost:8080\r\n"
write "\r\n"

read "HTTP/1.1 200 OK\r\n"
read "Connection: close\r\n"
read "Content-Length: 9\r\n"
read "\r\n"
read "response1"

write close

write notify FIRST_REQUEST_PROCESSED

connect await FIRST_REQUEST_PROCESSED 
        "zilla://streams/net#0"
  option zilla:window 8192
  option zilla:transmission "duplex"
connected

write "GET /request2 HTTP/1.1\r\n"
write "Host: localhost:8080\r\n"
write "\r\n"

read "HTTP/1.1 200 OK\r\n"
read "Content-Length: 9\r\n"
read "\r\n"
read "response2"
