accept "http://localhost:8080/proxy"
accepted
connected
read http:header "secret" "header"
read notify CLIENT_REQUEST_READ
read closed
write await SERVER_RESPONSE_READ
write http:status "200" "OK"
write http:header "doubleSecret" "probation"
write http:content-length
write close

connect "http://localhost:8080/server"
connected
write await CLIENT_REQUEST_READ
write http:method "GET"
write http:host
write http:header "secret" "header"
write close
read http:status "200" "OK"
read http:header "doubleSecret" "probation"
read closed
read notify SERVER_RESPONSE_READ

