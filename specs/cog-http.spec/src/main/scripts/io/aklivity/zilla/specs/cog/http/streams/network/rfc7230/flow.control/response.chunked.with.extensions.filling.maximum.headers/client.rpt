property clientInitialWindow 8192

connect "zilla://streams/net#0"
  option zilla:window ${clientInitialWindow}
  option zilla:transmission "half-duplex"
connected

write "GET / HTTP/1.1" "\r\n"
write "Host: localhost:8080" "\r\n"
write "\r\n"

read "HTTP/1.1 200 OK\r\n"
read "Transfer-Encoding: chunked\r\n"
read "\r\n"
read "5; ext1=value 1\r\n"
read "chunk\r\n"
read "0\r\n\r\n"
