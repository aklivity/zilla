property networkAcceptWindow 8192

accept "zilla://streams/net0"
  option zilla:window ${networkAcceptWindow}
  option zilla:transmission "duplex"
  option zilla:byteorder "network"

accepted

connected

read  42                                # size
      20s                               # delete topics
      3s                                # v3
      (int:newRequestId)
      5s "zilla"                        # client id
      2                                 # topic count
        6s "events"                     # name
        9s "snapshots"                  # name
      0                                 # timeout

write 35                                 # size
      ${newRequestId}
      0                                  # throttle time ms
      2                                  # topics
        6s "events"                      # name
        0s                               # error code
        9s "snapshots"                   # name
        0s                               # error code
