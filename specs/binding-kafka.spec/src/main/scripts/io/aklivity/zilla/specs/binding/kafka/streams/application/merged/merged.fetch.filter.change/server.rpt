property deltaMillis 0L
property newTimestamp ${kafka:timestamp() + deltaMillis}

accept "zilla://streams/app0"
    option zilla:window 8192
    option zilla:transmission "half-duplex"

accepted

read zilla:begin.ext ${kafka:beginEx()
                              .typeId(zilla:id("kafka"))
                              .merged()
                                  .capabilities("FETCH_ONLY")
                                  .topic("test")
                                  .partition(0, 1)
                                  .partition(1, 1)
                                  .filter()
                                      .headers("header3")
                                          .sequence("one")
                                          .build()
                                      .build()
                                  .build()
                              .build()}

connected

write advise zilla:flush ${kafka:flushEx()
                                .typeId(zilla:id("kafka"))
                                .merged()
                                   .fetch()
                                    .progress(0, 2, 2, 2)
                                    .progress(1, 2, 2, 2)
                                    .build()
                                .build()}

write zilla:data.ext ${kafka:dataEx()
                              .typeId(zilla:id("kafka"))
                              .merged()
                                .fetch()
                                  .timestamp(newTimestamp)
                                  .partition(0, 5, 6)
                                  .progress(0, 6)
                                  .progress(1, 5)
                                  .header("header3", "one")
                                  .build()
                              .build()}
write "Hello, world #A5"
write flush

read advised zilla:flush ${kafka:matchFlushEx()
                               .typeId(zilla:id("kafka"))
                               .merged()
                                  .fetch()
                                   .filter()
                                       .headers("header3")
                                          .sequence("one")
                                          .build()
                                       .build()
                                   .filter()
                                       .headers("header2")
                                          .sequence("value2")
                                          .build()
                                       .build()
                                   .build()
                               .build()}

write zilla:data.ext ${kafka:dataEx()
                             .typeId(zilla:id("kafka"))
                             .merged()
                                .fetch()
                                 .partition(1, 4, 6)
                                 .progress(0, 5)
                                 .progress(1, 5)
                                 .key("key1")
                                 .header("header2", "value2")
                                 .build()
                             .build()}
write "Hello, world #B4"
write flush

write zilla:data.ext ${kafka:dataEx()
                             .typeId(zilla:id("kafka"))
                             .fetch()
                                 .partition(0, 6, 6)
                                 .header("header3", "one")
                                 .header("header3", "")
                                 .header("header3", "three")
                                 .header("header3", "")
                                 .build()
                             .build()}
write "Hello, world #A6"
write flush
