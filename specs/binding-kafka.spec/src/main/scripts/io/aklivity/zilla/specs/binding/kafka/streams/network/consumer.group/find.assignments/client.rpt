property networkConnectWindow 8192

property newRequestId ${kafka:newRequestId()}
property fetchWaitMax 500
property fetchBytesMax 65535
property partitionBytesMax 8192

connect "zilla://streams/net0"
  option zilla:window ${networkConnectWindow}
  option zilla:transmission "duplex"
  option zilla:byteorder "network"

connected

write 17                                # size
      10s                               # Find Coordinator
      1s                                # v1
      ${newRequestId}
      -1s                               # no client id
      4s "test"                         # "test" Coordinator Key
      [0x00]                            # Coordinator Group Type

read 35                                 # size
     ${newRequestId}
     0                                  #Throttle time
     0s                                 #No error
     4s "NONE"                          #Error message NONE
     1                                  #Coordinator Node
        9s "localhost"                  #Host
        9092                            #Port

write 65                                # size
      11s                               # Join Group
      2s                                # v2
      ${newRequestId}
      -1s                               # no client id
      4s "test"                         # Consumer Group
      45000                             # Session Timeout
      300000                            # Rebalance Timeout
      0s                                # Consumer Group Member
      8s "consumer"                     # Protocol Type
      2                                 # Group Protocol
        5s "range"                      # Protocol Name
        0s                              # Protocol Metadata
        4s "test"                       # Protocol Name
        10s "roundrobin"                # Protocol Metadata


read 141                                             # size
     ${newRequestId}
     0                                               # Throttle time
     0s                                              # No error
     3                                               # Generated Id
     5s "range"                                      # Protocol Name
     36s "134d7851-0dde-46a7-9483-a310ba44840b"      # Leader Id
     36s "134d7851-0dde-46a7-9483-a310ba44840b"      # Consumer Member Group Id
     1                                               # Members
        36s "134d7851-0dde-46a7-9483-a310ba44840b"      # Consumer Member Group Id
        0s                                              # Metadata

write 100                                           # size
      14s                                           # Sync Group
      1s                                            # v1
      ${newRequestId}
      -1s                                           # no client id
      4s "test"                                     # Consumer Group
      3                                             # Generation id
      36s "134d7851-0dde-46a7-9483-a310ba44840b"    # Consumer Member Group Id
      1                                             # Assignments
        36s "134d7851-0dde-46a7-9483-a310ba44840b"    # Consumer Member Group Id
        0s                                            # Member Assignment

read 12                                              # size
     ${newRequestId}
     0                                               # Throttle time
     0s                                              # No error
     0s                                              # Member Assignment


write 62                                            # size
      12s                                           # Sync Group
      1s                                            # v1
      ${newRequestId}
      -1s                                           # no client id
      4s "test"                                     # Consumer Group
      3                                             # Generation id
      36s "134d7851-0dde-46a7-9483-a310ba44840b"    # Consumer Member Group Id

read 10                                              # size
     ${newRequestId}
     0                                               # Throttle time
     0s                                              # No error

write 54                                           # size
      13s                                           # Sync Group
      1s                                            # v1
      ${newRequestId}
      -1s                                           # no client id
      4s "test"                                     # Consumer Group
      36s "134d7851-0dde-46a7-9483-a310ba44840b"    # Consumer Member Group Id

read 10                                              # size
     ${newRequestId}
     0                                               # Throttle time
     0s                                              # No error
