property networkAcceptWindow 8192

accept "zilla://streams/net0"
  option zilla:window ${networkAcceptWindow}
  option zilla:transmission "duplex"
  option zilla:byteorder "network"

accepted

connected

read  16                                # size
      32s                               # describe configs
      0s                                # v0
      (int:newRequestId)
      5s "zilla"                        # client id
      [0x00]                            # resources


write 79                                 # size
      ${newRequestId}
      0                                  # throttle time ms
      0s                                 # error code
      -1s                                # error message
      9s "cluster-0"                     # cluster id
      0                                  # controller id
      2                                  # brokers
        0                                # broker id
        10s "localhost0"                 # host
        9092                             # port
        -1s                              # rack
        1                                # broker id
        10s "localhost1"                 # host
        9092                             # port
        -1s                              # rack
      0                                  # cluster authorized operations
