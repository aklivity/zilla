property networkAcceptWindow 8192

accept "zilla://streams/net0"
  option zilla:window ${networkAcceptWindow}
  option zilla:transmission "duplex"
  option zilla:byteorder "network"

accepted

connected

read  130                               # size
      19s                               # create topics
      1s                                # v1
      (int:newRequestId)
      2                                 # resource count
        [0x02]                          # resource type
        6s "events"                     # name
        1                               # configs
            14s "cleanup.policy"        # name
            6s "delete"                 # value
        6s "snapshots"                  # name
        1                               # configs
            14s "cleanup.policy"        # name
            6s "compact"                # value
      0                                 # timeout
      [0x00]                            # validate only

write 41                                 # size
      ${newRequestId}
      0                                  # throttle time ms
      2                                  # topics
        0s                               # error code
        -1s                              # error message
        [0x02]                           # resource type
        6s "events"                      # name
        0s                               # error code
        -1s                              # error message
        [0x02]                           # resource type
        9s "snapshots"                   # name

