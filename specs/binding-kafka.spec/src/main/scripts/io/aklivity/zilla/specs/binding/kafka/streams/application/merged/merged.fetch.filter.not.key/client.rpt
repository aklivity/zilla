connect "zilla://streams/app0"
    option zilla:window 16
    option zilla:transmission "half-duplex"

write zilla:begin.ext ${kafka:beginEx()
                               .typeId(zilla:id("kafka"))
                               .merged()
                                   .capabilities("FETCH_ONLY")
                                   .topic("test")
                                   .partition(0, 1)
                                   .partition(1, 1)
                                   .filter()
                                       .keyNot("key2")
                                       .build()
                                   .build()
                               .build()}

connected

read zilla:data.ext ${kafka:matchDataEx()
                             .typeId(zilla:id("kafka"))
                             .merged()
                                .fetch()
                                 .partition(0, 1, 2)
                                 .progress(0, 2)
                                 .progress(1, 1)
                                 .key("key1")
                                 .header("header2", "value2")
                                 .build()
                             .build()}
read "Hello, world #A1"

read zilla:data.ext ${kafka:matchDataEx()
                             .typeId(zilla:id("kafka"))
                             .merged()
                                .fetch()
                                 .partition(1, 2, 2)
                                 .progress(0, 2)
                                 .progress(1, 3)
                                 .key("key1")
                                 .header("header1", "value1")
                                 .build()
                             .build()}
read "Hello, world #B2"

read zilla:data.ext ${kafka:matchDataEx()
                             .typeId(zilla:id("kafka"))
                             .merged()
                                .fetch()
                                 .partition(0, 3, 4)
                                 .progress(0, 4)
                                 .progress(1, 3)
                                 .key("key1")
                                 .header("header1", "value1")
                                 .build()
                             .build()}
read "Hello, world #A3"

read zilla:data.ext ${kafka:matchDataEx()
                             .typeId(zilla:id("kafka"))
                             .merged()
                                .fetch()
                                 .partition(1, 4, 4)
                                 .progress(0, 4)
                                 .progress(1, 5)
                                 .key("key1")
                                 .header("header2", "value2")
                                 .build()
                             .build()}
read "Hello, world #B4"
