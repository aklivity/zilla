property networkAcceptWindow 8192

accept "zilla://streams/net0"
  option zilla:window ${networkAcceptWindow}
  option zilla:transmission "duplex"
  option zilla:byteorder "network"

accepted

connected

read  38                                # size
      9s                                # offset fetch
      5s                                # v0
      (int:newRequestId)
      -1s                               # no client id
      8s "client-1"                     # group id
      1                                 # topics
        4s "test"                       # "test" topic
        1                               # partitions
          0                             # partition

write 57                                 # size
      ${newRequestId}
      0                                  # throttle time ms
      1                                  # topics
        4s "test"                          # "test" topic
        1                                  # partitions
          0                                   # partition index
          2L                                  # committed offset
          0                                   # committed leader epoch
          9s "test-meta"                      # metadata
          0s                                  # no error
      0                                  # error code
