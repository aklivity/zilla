property networkConnectWindow 8192

property newRequestId ${kafka:newRequestId()}
property fetchWaitMax 500
property fetchBytesMax 65535
property partitionBytesMax 8192

connect "zilla://streams/net0"
  option zilla:window ${networkConnectWindow}
  option zilla:transmission "duplex"
  option zilla:byteorder "network"

connected

write  20                                # size
       10s                               # find coordinator
       1s                                # v1
       (int:newRequestId)
       -1s                               # no client id
       7s "session"                      # "session" coordinator key
       [0x00]                            # coordinator group type

read  35                                 # size
      ${newRequestId}
      0                                  #throttle time
      0s                                 #no error
      4s "none"                          #error message none
      1                                  #coordinator node
         9s "localhost"                  #host
         9092                            #port



read notify ROUTED_BROKER_SERVER

connect await ROUTED_BROKER_SERVER
        "zilla://streams/net0"
  option zilla:window ${networkConnectWindow}
  option zilla:transmission "duplex"
  option zilla:byteorder "network"

connected

write  53                                # size
       11s                               # join group
       2s                                # v2
       (int:newRequestId)
       -1s                               # no client id
       4s "test"                         # consumer group
       45000                             # session timeout
       300000                            # rebalance timeout
       0s                                # consumer group member
       8s "consumer"                     # protocol type
       1                                 # group protocol
         7s "session"                    # protocol name
         0                               # metadata


read  67                                                # size
      ${newRequestId}
      0                                                 # throttle time
      0s                                                # no error
      3                                                 # generated id
      7s "session"                                      # protocol name
      10s "consumer-1"                                  # leader id
      10s "consumer-1"                                  # consumer member group id
      1                                                 # members
         10s "consumer-1"                                  # consumer member group id
         0                                                 # metadata

write 52                                            # size
      14s                                           # sync group
      5s                                            # v5
      (int:newRequestId)
      -1s                                           # no client id
      4s "test"                                     # consumer group
      1                                             # generation id
      10s "consumer-1"                              # consumer member group id
      1                                             # assignments
        10s "consumer-1"                             # consumer member group id
        0                                            # metadata

read  14                                                # size
      ${newRequestId}
      0                                                 # throttle time
      0s                                                # no error
      0                                                 # assignment

write 32                                            # size
      12s                                           # sync group
      1s                                            # v1
      (int:newRequestId)
      -1s                                           # no client id
      4s "test"                                     # consumer group
      2                                             # generation id
      10s "consumer-1"                              # consumer member group id

read  10                                                # size
      ${newRequestId}
      0                                                 # throttle time
      0s                                                # no error
