property networkAcceptWindow 8192

accept "zilla://streams/net0"
  option zilla:window ${networkAcceptWindow}
  option zilla:transmission "duplex"
  option zilla:byteorder "network"

accepted

connected

read 61                                # size
      19s                               # create topics
      4s                                # v4
      (int:newRequestId)
      1                                 # topic count
        4s "test"                       # name
        1                               # number of partitions
        1s                              # replication factor
        1                               # assignments
            0                           # partition index
            0                           # broker ids
        1                               # configs
            7s "config0"                # name
            6s "value0"                 # value
      0                                 # timeout

write 22                                 # size
      ${newRequestId}
      0                                  # throttle time ms
      1                                  # topics
        4s "test"                        # name
        0s                               # error code
        -1s                              # error message
