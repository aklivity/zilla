connect "zilla://streams/app0"
    option zilla:window 8192
    option zilla:transmission "half-duplex"

write zilla:begin.ext ${kafka:beginEx()
                               .typeId(zilla:id("kafka"))
                               .meta()
                                   .topic("test")
                                   .build()
                               .build()}

connected

read zilla:begin.ext ${kafka:beginEx()
                              .typeId(zilla:id("kafka"))
                              .meta()
                                  .topic("test")
                                  .build()
                              .build()}

read zilla:data.ext ${kafka:dataEx()
                             .typeId(zilla:id("kafka"))
                             .meta()
                                 .partition(0, 177)
                                 .build()
                             .build()}

read notify ROUTED_BROKER_CLIENT

connect await ROUTED_BROKER_CLIENT
        "zilla://streams/app0"
    option zilla:window 8192
    option zilla:transmission "half-duplex"
    option zilla:affinity 0xb1

write zilla:begin.ext ${kafka:beginEx()
                               .typeId(zilla:id("kafka"))
                               .fetch()
                                   .topic("test")
                                   .partition(0, 1)
                                   .filter()
                                       .headers("header3")
                                          .sequence("one", "two", "three", "four")
                                          .build()
                                       .build()
                                   .build()
                               .build()}

connected

read notify RECEIVED_MESSAGE_2

read zilla:data.ext ${kafka:matchDataEx()
                             .typeId(zilla:id("kafka"))
                             .fetch()
                                 .filters(1)
                                 .partition(0, 7, 8)
                                 .header("header3", "one")
                                 .header("header3", "two")
                                 .header("header3", "three")
                                 .header("header3", "four")
                                 .build()
                             .build()}
read "Hello, world"
