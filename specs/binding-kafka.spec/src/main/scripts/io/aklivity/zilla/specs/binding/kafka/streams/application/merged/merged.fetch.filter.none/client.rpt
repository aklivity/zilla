connect "zilla://streams/app0"
    option zilla:window 16
    option zilla:transmission "half-duplex"

write zilla:begin.ext ${kafka:beginEx()
                               .typeId(zilla:id("kafka"))
                               .merged()
                                   .capabilities("FETCH_ONLY")
                                   .topic("test")
                                   .partition(0, 1)
                                   .partition(1, 1)
                                   .build()
                               .build()}

connected

read zilla:data.ext ${kafka:matchDataEx()
                             .typeId(zilla:id("kafka"))
                             .merged()
                                 .partition(0, 1, 2)
                                 .progress(0, 2)
                                 .progress(1, 1)
                                 .key("key1")
                                 .header("header2", "value2")
                                 .build()
                             .build()}
read "Hello, world #A1"

read zilla:data.ext ${kafka:matchDataEx()
                             .typeId(zilla:id("kafka"))
                             .merged()
                                 .partition(1, 1, 2)
                                 .progress(0, 2)
                                 .progress(1, 2)
                                 .header("header1", "value1")
                                 .header("header2", "value2")
                                 .build()
                             .build()}
read "Hello, world #B1"

read zilla:data.ext ${kafka:matchDataEx()
                             .typeId(zilla:id("kafka"))
                             .merged()
                                 .partition(0, 2, 2)
                                 .progress(0, 3)
                                 .progress(1, 2)
                                 .header("header1", "value1")
                                 .build()
                             .build()}
read "Hello, world #A2"

read zilla:data.ext ${kafka:matchDataEx()
                             .typeId(zilla:id("kafka"))
                             .merged()
                                 .partition(1, 2, 2)
                                 .progress(0, 3)
                                 .progress(1, 3)
                                 .key("key1")
                                 .header("header1", "value1")
                                 .build()
                             .build()}
read "Hello, world #B2"

read notify RECEIVED_MESSAGE_B2

read advised zilla:flush ${kafka:matchFlushEx()
                               .typeId(zilla:id("kafka"))
                               .merged()
                                  .fetch()
                                   .progress(0, 3, 2, 2)
                                   .progress(1, 3, 2, 2)
                                   .build()
                               .build()}

read zilla:data.ext ${kafka:matchDataEx()
                             .typeId(zilla:id("kafka"))
                             .merged()
                                 .partition(0, 3, 6)
                                 .progress(0, 4)
                                 .progress(1, 3)
                                 .key("key1")
                                 .header("header1", "value1")
                                 .build()
                             .build()}
read "Hello, world #A3"

read zilla:data.ext ${kafka:matchDataEx()
                             .typeId(zilla:id("kafka"))
                             .merged()
                                 .partition(1, 3, 6)
                                 .progress(0, 4)
                                 .progress(1, 4)
                                 .header("header1", "value1")
                                 .build()
                             .build()}
read "Hello, world #B3"

read notify RECEIVED_MESSAGE_B3

read zilla:data.ext ${kafka:matchDataEx()
                             .typeId(zilla:id("kafka"))
                             .merged()
                                 .partition(0, 4, 6)
                                 .progress(0, 5)
                                 .progress(1, 4)
                                 .header("header1", "value1")
                                 .header("header2", "value2")
                                 .build()
                             .build()}
read "Hello, world #A4"

read zilla:data.ext ${kafka:matchDataEx()
                             .typeId(zilla:id("kafka"))
                             .merged()
                                 .partition(1, 4, 6)
                                 .progress(0, 5)
                                 .progress(1, 5)
                                 .key("key1")
                                 .header("header2", "value2")
                                 .build()
                             .build()}
read "Hello, world #B4"

read notify RECEIVED_MESSAGE_B4

read zilla:data.ext ${kafka:matchDataEx()
                             .typeId(zilla:id("kafka"))
                             .merged()
                                 .partition(0, 5, 6)
                                 .progress(0, 6)
                                 .progress(1, 5)
                                 .header("header3", "one")
                                 .build()
                             .build()}
read "Hello, world #A5"

read zilla:data.ext ${kafka:matchDataEx()
                             .typeId(zilla:id("kafka"))
                             .merged()
                                 .partition(1, 5, 6)
                                 .progress(0, 6)
                                 .progress(1, 6)
                                 .header("header3", "one")
                                 .header("header3", "")
                                 .build()
                             .build()}
read "Hello, world #B5"

read notify RECEIVED_MESSAGE_B5

read zilla:data.ext ${kafka:matchDataEx()
                             .typeId(zilla:id("kafka"))
                             .merged()
                                 .partition(0, 6, 6)
                                 .progress(0, 7)
                                 .progress(1, 6)
                                 .header("header3", "one")
                                 .header("header3", "")
                                 .header("header3", "three")
                                 .header("header3", "")
                                 .build()
                             .build()}
read "Hello, world #A6"

read zilla:data.ext ${kafka:matchDataEx()
                             .typeId(zilla:id("kafka"))
                             .merged()
                                 .partition(1, 6, 6)
                                 .progress(0, 7)
                                 .progress(1, 7)
                                 .header("header3", "one")
                                 .header("header3", "two")
                                 .header("header3", "three")
                                 .header("header3", "four")
                                 .build()
                             .build()}
read "Hello, world #B6"
