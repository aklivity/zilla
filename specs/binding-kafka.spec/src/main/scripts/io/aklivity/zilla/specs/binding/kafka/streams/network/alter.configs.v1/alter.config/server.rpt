property networkAcceptWindow 8192

accept "zilla://streams/net0"
  option zilla:window ${networkAcceptWindow}
  option zilla:transmission "duplex"
  option zilla:byteorder "network"

accepted

connected

read 45                                # size
      33s                               # create topics
      1s                                # v1
      (int:newRequestId)
      1                                 # resource count
        [0x02]                          # resource type
        4s "test"                       # name
        1                               # configs
            7s "config0"                # name
            6s "value0"                 # value
      0                                 # timeout
      [0x00]                            # validate only

write 23                                 # size
      ${newRequestId}
      0                                  # throttle time ms
      1                                  # topics
        0s                               # error code
        -1s                              # error message
        [0x02]                           # resource type
        4s "test"                        # name

