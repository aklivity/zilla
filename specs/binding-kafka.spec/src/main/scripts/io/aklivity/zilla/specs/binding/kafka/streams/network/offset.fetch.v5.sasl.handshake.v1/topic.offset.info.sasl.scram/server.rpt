property networkAcceptWindow 8192

accept "zilla://streams/net0"
  option zilla:window ${networkAcceptWindow}
  option zilla:transmission "duplex"
  option zilla:byteorder "network"

accepted

connected

read 23                                 # size
     17s                                # sasl.handshake
     1s                                 # v1
     (int:requestId)
      -1s                               # no client id
      11s "SCRAM-SHA-1"               # mechanism

write 23                                # size
      ${requestId}
      0s                                # no error
      1                                 # mechanisms
        11s "SCRAM-SHA-1"             # SCRAM

read 50                                 # size
     36s                                # sasl.authenticate
     1s                                 # v1
     (int:requestId)
     -1s                                # no client id
     36                                 # authentication bytes
     "n,,n=user,r=fyko+d2lbbFgONRv9qkxdawL"

write 92                                # size
      ${requestId}
      0s                                # no error
      -1s
      70 "r=fyko+d2lbbFgONRv9qkxdawL3rfcNHYJY1ZVvWVs7j,s=QSXCR+Q6sek8bf92,i=4096"  # authentication bytes
      0L                                # session lifetime

read 96                                 # size
     36s                                # sasl.authenticate
     1s                                 # v1
     (int:requestId)
     -1s                                # no client id
     82                                 # authentication bytes
     "c=biws,r=fyko+d2lbbFgONRv9qkxdawL3rfcNHYJY1ZVvWVs7j,p=v0X8v3Bz2T0CJGbJQyF0X+HI4Ts="

write 52                                # size
      ${requestId}
      0s                                # no error
      -1s
      30 "v=rmF9pqV8S7suAoZWja4dJRkFsKQ="  # authentication bytes
      0L                                # session lifetime

read  38                                # size
      9s                                # offset fetch
      5s                                # v0
      (int:newRequestId)
      -1s                               # no client id
      8s "client-1"                     # group id
      1                                 # topics
        4s "test"                       # "test" topic
        1                               # partitions
          0                             # partition

write 57                                 # size
      ${newRequestId}
      0                                  # throttle time ms
      1                                  # topics
        4s "test"                          # "test" topic
        1                                  # partitions
          0                                   # partition index
          2L                                  # committed offset
          0                                   # committed leader epoch
          9s "test-meta"                      # metadata
          0s                                  # no error
      0                                  # error code
