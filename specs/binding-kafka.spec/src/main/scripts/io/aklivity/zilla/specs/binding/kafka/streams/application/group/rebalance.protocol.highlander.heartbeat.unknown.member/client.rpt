connect "zilla://streams/app0"
    option zilla:window 8192
    option zilla:transmission "half-duplex"

write zilla:begin.ext ${kafka:beginEx()
                               .typeId(zilla:id("kafka"))
                               .group()
                                   .groupId("test")
                                   .protocol("highlander")
                                   .timeout(45000)
                                   .build()
                               .build()}

connected

read zilla:begin.ext ${kafka:matchBeginEx()
                               .typeId(zilla:id("kafka"))
                               .group()
                                   .groupId("test")
                                   .protocol("highlander")
                                   .instanceId("zilla")
                                   .timeout(30000)
                                   .build()
                               .build()}

read advised zilla:flush ${kafka:flushEx()
                             .typeId(zilla:id("kafka"))
                             .group()
                                 .generationId(0)
                                 .leaderId("memberId-1")
                                 .memberId("memberId-1")
                                 .members("memberId-1")
                                 .build()
                             .build()}

write zilla:data.empty
write flush

read zilla:data.empty

write advise zilla:flush

read advised zilla:flush ${kafka:flushEx()
                             .typeId(zilla:id("kafka"))
                             .group()
                                 .generationId(0)
                                 .leaderId("memberId-2")
                                 .memberId("memberId-2")
                                 .members("memberId-2")
                                 .build()
                             .build()}

write zilla:data.empty
write flush

read zilla:data.empty

write close
read closed
