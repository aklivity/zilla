connect "zilla://streams/app0"
    option zilla:window 16
    option zilla:transmission "half-duplex"

write zilla:begin.ext ${kafka:beginEx()
                               .typeId(zilla:id("kafka"))
                               .merged()
                                   .capabilities("FETCH_ONLY")
                                   .topic("test")
                                   .partition(0, 1)
                                   .partition(1, 1)
                                   .filter()
                                       .headers("header3")
                                          .sequence("one")
                                          .build()
                                       .build()
                                   .build()
                               .build()}

connected

read advised zilla:flush ${kafka:matchFlushEx()
                                .typeId(zilla:id("kafka"))
                                .merged()
                                  .fetch()
                                    .progress(0, 2, 2, 2)
                                    .progress(1, 2, 2, 2)
                                    .build()
                                .build()}

read zilla:data.ext ${kafka:matchDataEx()
                             .typeId(zilla:id("kafka"))
                             .merged()
                                .fetch()
                                 .partition(0, 5, 6)
                                 .progress(0, 6)
                                 .progress(1, 5)
                                 .header("header3", "one")
                                 .build()
                             .build()}
read "Hello, world #A5"

write advise zilla:flush ${kafka:flushEx()
                               .typeId(zilla:id("kafka"))
                               .merged()
                                  .fetch()
                                   .capabilities("FETCH_ONLY")
                                   .filter()
                                       .headers("header3")
                                          .sequence("one")
                                          .build()
                                       .build()
                                   .filter()
                                       .headers("header2")
                                          .sequence("value2")
                                          .build()
                                       .build()
                                   .build()
                               .build()}

write notify FILTERS_CHANGED

read zilla:data.ext ${kafka:matchDataEx()
                             .typeId(zilla:id("kafka"))
                             .merged()
                                .fetch()
                                 .partition(1, 4, 6)
                                 .progress(0, 5)
                                 .progress(1, 5)
                                 .key("key1")
                                 .header("header2", "value2")
                                 .build()
                             .build()}
read "Hello, world #B4"


read zilla:data.ext ${kafka:matchDataEx()
                             .typeId(zilla:id("kafka"))
                             .fetch()
                                 .partition(0, 6, 6)
                                 .header("header3", "one")
                                 .header("header3", "")
                                 .header("header3", "three")
                                 .header("header3", "")
                                 .build()
                             .build()}
read "Hello, world #A6"

