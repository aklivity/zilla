        4s "test"                       # "test" topic
        11                              # configs
          14s "cleanup.policy"            # name
          17s "max.message.bytes"
          13s "segment.bytes"
          19s "segment.index.bytes"
          10s "segment.ms"
          15s "retention.bytes"
          12s "retention.ms"
          19s "delete.retention.ms"
          21s "min.compaction.lag.ms"
          21s "max.compaction.lag.ms"
          25s "min.cleanable.dirty.ratio"

