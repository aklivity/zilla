accept "zilla://streams/net0"
  option zilla:window 8192
  option zilla:transmission "duplex"
  option zilla:byteorder "network"

accepted

connected

read  20                                # size
      10s                               # find coordinator
      1s                                # v1
      (int:newRequestId)
      -1s                               # no client id
      7s "session"                      # "session" coordinator key
      [0x00]                            # coordinator group type

write 35                                 # size
      ${newRequestId}
      0                                  #throttle time
      0s                                 #no error
      4s "none"                          #error message none
      1                                  #coordinator node
         9s "localhost"                  #host
         9092                            #port

accepted

connected

read  53                                # size
      11s                               # join group
      2s                                # v2
      ${newRequestId}
      -1s                               # no client id
      4s "test"                         # consumer group
      45000                             # session timeout
      300000                            # rebalance timeout
      0s                                # consumer group member
      8s "consumer"                     # protocol type
      1                                 # group protocol
        7s "session"                    # protocol name


write 62                                                # size
      ${newRequestId}
      0                                                 # throttle time
      0s                                                # no error
      3                                                 # generated id
      7s "session"                                      # protocol name
      10s "consumer-1"                                  # leader id
      10s "consumer-1"                                  # consumer member group id
      1                                                 # members
         10s "consumer-1"                                  # consumer member group id
         0                                                 # metadata
write flush

read 52                                            # size
     14s                                           # sync group
     1s                                            # v1
     ${newRequestId}
     -1s                                           # no client id
     4s "test"                                     # consumer group
     1                                             # generation id
     10s "consumer-1"                              # consumer member group id
     1                                             # assignments
       10s "consumer-1"                             # consumer member group id
       0                                            # metadata
