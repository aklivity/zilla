[
    {
        "op": "add",
        "path": "/$defs/telemetry/exporter/properties/type/enum/-",
        "value": "otlp"
    },
    {
        "op": "add",
        "path": "/$defs/telemetry/exporter/allOf/-",
        "value":
        {
            "if":
            {
               "properties":
                {
                    "type":
                    {
                        "const": "otlp"
                    }
                }
            },
            "then":
            {
                "properties":
                {
                    "type":
                    {
                        "const": "otlp"
                    },
                    "vault": true,
                    "options":
                    {
                        "properties":
                        {
                            "interval":
                            {
                                "type": "number",
                                "default": 30
                            },
                            "signals":
                            {
                                "type": "array",
                                "items":
                                {
                                    "type": "string",
                                    "enum":
                                    [
                                        "metrics",
                                        "logs"
                                    ]
                                }
                            },
                            "endpoint":
                            {
                                "type": "object",
                                "properties":
                                {
                                    "protocol":
                                    {
                                        "type": "string",
                                        "enum":
                                        [
                                            "http"
                                        ],
                                        "default": "http"
                                    },
                                    "location":
                                    {
                                        "type": "string",
                                        "pattern": "^https?://"
                                    },
                                    "overrides":
                                    {
                                        "type": "object",
                                        "properties":
                                        {
                                            "metrics":
                                            {
                                                "type": "string",
                                                "default": "/v1/metrics"
                                            },
                                            "logs":
                                            {
                                                "type": "string",
                                                "default": "/v1/logs"
                                            }
                                        }
                                    }
                                },
                                "required":
                                [
                                    "location"
                                ],
                                "additionalProperties": false
                            },
                            "tls":
                            {
                                "title": "TLS",
                                "type": "object",
                                "properties":
                                {
                                    "keys":
                                    {
                                        "title": "Vault Keys",
                                        "type": "array",
                                        "items":
                                        {
                                            "type": "string"
                                        }
                                    },
                                    "trust":
                                    {
                                        "title": "Vault Certificates",
                                        "type": "array",
                                        "items":
                                        {
                                            "type": "string"
                                        }
                                    },
                                    "trustcacerts":
                                    {
                                        "title": "Trust CA Certificates",
                                        "type": "boolean"
                                    }
                                },
                                "additionalProperties": false
                            },
                            "credentials":
                            {
                                "title": "Credentials",
                                "type": "object",
                                "properties":
                                {
                                    "headers":
                                    {
                                        "title": "Headers",
                                        "type": "object",
                                        "properties":
                                        {
                                            "authorization":
                                            {
                                                "type": "string"
                                            }
                                        },
                                        "additionalProperties": false
                                    }
                                },
                                "additionalProperties": false
                            }
                        },
                        "required":
                        [
                            "endpoint"
                        ],
                        "additionalProperties": false,
                        "if":
                        {
                            "properties":
                            {
                                "endpoint":
                                {
                                    "properties":
                                    {
                                        "location":
                                        {
                                            "pattern": "^http:\/\/"
                                        }
                                    }
                                }
                            }
                        },
                        "then":
                        {
                            "properties":
                            {
                                "tls": false
                            }
                        }
                    },
                    "additionalProperties": false
                },
                "required":
                [
                    "options"
                ]
            }
        }
    }
]
