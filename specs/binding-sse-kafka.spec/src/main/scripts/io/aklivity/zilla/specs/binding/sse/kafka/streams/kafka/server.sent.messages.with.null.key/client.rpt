connect "zilla://streams/kafka0"
    option zilla:window 8192
    option zilla:transmission "duplex"

write zilla:begin.ext ${kafka:beginEx()
                             .typeId(zilla:id("kafka"))
                             .merged()
                                 .capabilities("FETCH_ONLY")
                                 .topic("test")
                                 .partition(-1, -2)
                                 .build()
                             .build()}

connected

read zilla:data.ext ${kafka:matchDataEx()
                           .typeId(zilla:id("kafka"))
                           .merged()
                               .partition(0, 1, 2)
                               .progress(0, 2)
                               .progress(1, 1)
                               .header("header", "value")
                               .build()
                           .build()}
read "Hello, world"

read zilla:data.ext ${kafka:matchDataEx()
                           .typeId(zilla:id("kafka"))
                           .merged()
                               .partition(0, 2, 2)
                               .progress(0, 3)
                               .progress(1, 1)
                               .header("header", "value")
                               .build()
                           .build()}
read "Hello, again"
