accept "zilla://streams/kafka0"
    option zilla:window 8192
    option zilla:transmission "duplex"

accepted

read zilla:begin.ext ${kafka:beginEx()
                            .typeId(zilla:id("kafka"))
                            .merged()
                                .capabilities("FETCH_ONLY")
                                .topic("test")
                                .partition(-1, -2)
                                .build()
                            .build()}

connected

write zilla:data.ext ${kafka:dataEx()
                            .typeId(zilla:id("kafka"))
                            .merged()
                                .timestamp(kafka:timestamp())
                                .partition(0, 1, 2)
                                .progress(0, 2)
                                .progress(1, 1)
                                .key("key")
                                .header("header", "value")
                                .build()
                            .build()}
write "Hello, world"
write flush

write zilla:data.ext ${kafka:dataEx()
                            .typeId(zilla:id("kafka"))
                            .merged()
                                .timestamp(kafka:timestamp())
                                .partition(0, 2, 2)
                                .progress(0, 3)
                                .progress(1, 1)
                                .key("key")
                                .header("header", "value")
                                .build()
                            .build()}
write "Hello, again"
write flush

write advise zilla:flush ${kafka:flushEx()
                               .typeId(zilla:id("kafka"))
                               .merged()
                                 .fetch()
                                   .progress(0, 2, 2, 2)
                                   .build()
                               .build()}
