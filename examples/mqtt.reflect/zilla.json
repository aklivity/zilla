{
    "vaults":
    {
        "server":
        {
            "type": "filesystem",
            "options":
            {
                "keys":
                {
                    "store": "localhost.p12",
                    "type": "pkcs12",
                    "password": "generated"
                }
            }
        }
    },
    "bindings":
    {
        "tcp0":
        {
            "type" : "tcp",
            "kind": "server",
            "options":
            {
                "host": "0.0.0.0",
                "port": 1883
            },
            "exit": "mqtt0"
        },
        "tcp1":
        {
            "type" : "tcp",
            "kind": "server",
            "options":
            {
                "host": "0.0.0.0",
                "port": 8883
            },
            "exit": "tls0"
        },
        "tls0":
        {
            "type" : "tls",
            "kind": "server",
            "vault": "server",
            "options":
            {
                "keys": [ "localhost" ],
                "sni": [ "localhost" ]
            },
            "exit": "mqtt0"
        },
        "mqtt0":
        {
            "type" : "mqtt",
            "kind": "server",
            "routes":
            [
                {
                    "exit": "fan0",
                    "when":
                    [
                        {
                            "topic": "zilla"
                        }
                    ]
                }   
            ]
        },
        "fan0":
        {
            "type" : "fan",
            "kind": "server",
            "exit": "echo0"
        },
        "echo0":
        {
            "type" : "echo",
            "kind": "server"
        }
    }
}
