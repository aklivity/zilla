{
    "name": "example",
    "vaults":
    {
        "server":
        {
            "type": "filesystem",
            "options":
            {
                "keys":
                {
                    "store": "localhost.p12",
                    "type": "pkcs12",
                    "password": "generated"
                }
            }
        }
    },
    "bindings":
    {
        "tcp0":
        {
            "type" : "tcp",
            "kind": "server",
            "options":
            {
                "host": "0.0.0.0",
                "port": 9090
            },
            "exit": "tls0"
        },
        "tcp1":
        {
            "type" : "tcp",
            "kind": "server",
            "options":
            {
                "host": "0.0.0.0",
                "port": 8080
            },
            "exit": "http0"
        },
        "tls0":
        {
            "type" : "tls",
            "kind": "server",
            "vault": "server",
            "options":
            {
                "keys": [ "localhost" ],
                "sni": [ "localhost" ],
                "alpn": [ "http/1.1", "h2" ]
            },
            "exit": "http0"
        },
        "http0":
        {
            "type" : "http",
            "kind": "server",
            "routes":
            [
                {
                    "exit": "http_filesystem0",
                    "when":
                    [
                        {
                            "headers":
                            {
                                ":scheme": "http",
                                ":authority": "localhost:8080"
                            }
                        },
                        {
                            "headers":
                            {
                                ":scheme": "https",
                                ":authority": "localhost:9090"
                            }
                        }
                    ]
                }
            ]
        },
        "http_filesystem0":
        {
            "type" : "http-filesystem",
            "kind": "proxy",
            "routes":
            [
                {
                    "exit": "filesystem0",
                    "when":
                    [
                        {
                            "path": "/{path}"
                        }
                    ],
                    "with":
                    {
                        "path": "${params.path}"
                    }
                }
            ]
        },
        "filesystem0":
        {
            "type" : "filesystem",
            "kind": "server",
            "options":
            {
                "location": "web/"
            }
        }
    }
}
