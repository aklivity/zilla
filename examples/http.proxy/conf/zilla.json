{
    "name": "example",
    "vaults":
    {
         "client":
        {
            "type": "filesystem",
            "options":
            {
                "trust":
                {
                    "store": "tls/truststore.p12",
                    "type": "pkcs12",
                    "password": "generated"
                }
            }
        },
        "server":
        {
            "type": "filesystem",
            "options":
            {
                "keys":
                {
                    "store": "tls/localhost.p12",
                    "type": "pkcs12",
                    "password": "generated"
                }
            }
        }
    },
    "bindings":
    {
        "tcp_server0":
        {
            "type" : "tcp",
            "kind": "server",
            "options":
            {
                "host": "0.0.0.0",
                "port": 9090
            },
            "exit": "tls_server0"
        },
        "tls_server0":
        {
            "type" : "tls",
            "kind": "server",
            "vault": "server",
            "options":
            {
                "keys": [ "localhost" ],
                "sni": [ "localhost" ],
                "alpn": [ "h2" ]
            },
            "exit": "http_server0"
        },
        "http_server0":
        {
            "type" : "http",
            "kind": "server",
            "options":
            {
                "access-control":
                {
                    "policy": "cross-origin"
                }
            },
            "routes":
            [
                {
                    "when":
                    [

                        {
                            "headers":
                            {
                                ":scheme": "https",
                                ":authority": "localhost:9090",
                                ":path": "/*"
                            }
                        }
                    ],
                    "exit": "http_client0"
                }
            ]
        },
        "http_client0":
        {
            "type" : "http",
            "kind": "client",
            "exit": "tls_client0"
        },
        "tls_client0":
        {
            "type" : "tls",
            "kind": "client",
            "vault": "client",
            "options":
            {
                "trustcacerts": true,
                "trust": ["nginx.internal.net"],
                "sni": ["nginx.internal.net"],
                "alpn": [ "h2" ]
            },
            "exit": "tcp_client0"
        },
        "tcp_client0":
        {
            "type" : "tcp",
            "kind": "client",
            "options":
            {
                "host": "nginx.internal.net",
                "port": 443
            }
        }
    }
}
