{
    "name": "example",
    "vaults":
    {
        "server":
        {
            "type": "filesystem",
            "options":
            {
                "keys":
                {
                    "store": "localhost.p12",
                    "type": "pkcs12",
                    "password": "generated"
                }
            }
        }
    },
    "bindings":
    {
        "tcp0":
        {
            "type" : "tcp",
            "kind": "server",
            "options":
            {
                "host": "0.0.0.0",
                "port": 8080
            },
            "exit": "http0"
        },
        "tcp1":
        {
            "type" : "tcp",
            "kind": "server",
            "options":
            {
                "host": "0.0.0.0",
                "port": 9090
            },
            "exit": "tls0"
        },
        "tls0":
        {
            "type" : "tls",
            "kind": "server",
            "vault": "server",
            "options":
            {
                "keys": [ "localhost" ],
                "sni": [ "localhost" ]
            },
            "exit": "http0"
        },
        "http0":
        {
            "type" : "http",
            "kind": "server",
            "routes":
            [
                {
                    "exit": "ws0",
                    "when":
                    [
                        {
                            "headers":
                            {
                                ":scheme": "http",
                                ":authority": "localhost:8080"
                            }
                        },
                        {
                            "headers":
                            {
                                ":scheme": "https",
                                ":authority": "localhost:9090"
                            }
                        }
                    ]
                }
            ]
        },
        "ws0":
        {
            "type" : "ws",
            "kind": "server",
            "routes":
            [
                {
                    "exit": "echo0",
                    "when":
                    [
                        {
                            "protocol": "echo"
                        }
                    ]
                }
            ]
        },
        "echo0":
        {
            "type" : "echo",
            "kind": "server"
        }
    }
}

