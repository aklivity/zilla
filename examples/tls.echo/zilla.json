{
    "vaults":
    {
        "server":
        {
            "type": "filesystem",
            "options":
            {
                "keys":
                {
                    "store": "localhost.p12",
                    "type": "pkcs12",
                    "password": "generated"
                }
            }
        }
    },
    "bindings":
    {
        "tcp0":
        {
            "type" : "tcp",
            "kind": "server",
            "options":
            {
                "host": "0.0.0.0",
                "port": 23456
            },
            "exit": "tls0"
        },
        "tls0":
        {
            "type" : "tls",
            "kind": "server",
            "vault": "server",
            "options":
            {
                "keys": [ "localhost" ],
                "sni": [ "localhost" ],
                "alpn": [ "echo" ]
            },
            "routes":
            [
                {
                    "exit": "echo0",
                    "when":
                    [
                        {
                            "alpn": "echo"
                        }
                    ]
                }
            ]
        },
        "echo0":
        {
            "type" : "echo",
            "kind": "server"
        }
    }
}

