accept "zilla://streams/mqtt0"
        option zilla:window 8192
        option zilla:transmission "duplex"

accepted

read zilla:begin.ext ${mqtt:matchBeginEx()
                             .typeId(zilla:id("mqtt"))
                             .subscribe()
                                .clientId("client")
                                .filter("sensor/+/#", 1)
                                .build()
                             .build()}

connected

read advised zilla:flush ${mqtt:flushEx()
                                 .typeId(zilla:id("mqtt"))
                                 .subscribe()
                                     .filter("sensor/+/#", 1)
                                     .filter("sensor/+/1", 2)
                                     .build()
                                 .build()}

write zilla:data.ext ${mqtt:dataEx()
                             .typeId(zilla:id("mqtt"))
                             .subscribe()
                                 .topic("sensor/one/1")
                                 .subscriptionId(1)
                                 .subscriptionId(2)
                                 .format("TEXT")
                                 .build()
                             .build()}

write "message"
write flush
