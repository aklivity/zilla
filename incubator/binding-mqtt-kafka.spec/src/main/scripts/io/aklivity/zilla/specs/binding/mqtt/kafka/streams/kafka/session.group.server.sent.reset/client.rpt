connect "zilla://streams/kafka0"
         option zilla:window 8192
         option zilla:transmission "duplex"

write zilla:begin.ext ${kafka:beginEx()
                            .typeId(zilla:id("kafka"))
                            .merged()
                                .capabilities("PRODUCE_AND_FETCH")
                                .topic("mqtt_sessions")
                                .filter()
                                    .key("client#migrate")
                                    .headerNot("session_id", "session1")
                                    .build()
                                .build()
                            .build()}

connected

write zilla:data.ext ${kafka:dataEx()
                           .typeId(zilla:id("kafka"))
                           .merged()
                               .deferred(0)
                               .partition(-1, -1)
                               .key("client#migrate")
                               .header("session_id", "session1")
                               .build()
                           .build()}
write zilla:data.empty
write flush

write close
read closed

write notify INIT_MIGRATE_FINISHED

connect await INIT_MIGRATE_FINISHED
        "zilla://streams/kafka0"
         option zilla:window 8192
         option zilla:transmission "duplex"

write zilla:begin.ext ${kafka:beginEx()
                               .typeId(zilla:id("kafka"))
                               .group()
                                   .groupId("client")
                                   .protocol("highlander")
                                   .timeout(1000)
                                   .build()
                               .build()}

connected

read zilla:data.ext ${kafka:matchDataEx()
                             .typeId(zilla:id("kafka"))
                             .group()
                                 .leaderId("consumer-1")
                                 .memberId("consumer-1")
                                 .build()
                             .build()}

write notify CONNACK_TRIGGERED


write notify GROUP_FINISHED

connect await GROUP_FINISHED
        "zilla://streams/kafka0"
         option zilla:window 8192
         option zilla:transmission "duplex"

write zilla:begin.ext ${kafka:beginEx()
                            .typeId(zilla:id("kafka"))
                            .merged()
                                .capabilities("PRODUCE_AND_FETCH")
                                .topic("mqtt_sessions")
                                .filter()
                                    .key("client")
                                    .build()
                                .filter()
                                    .key("client#migrate")
                                    .headerNot("session_id", "session1")
                                    .build()
                                .build()
                            .build()}

connected

read advised zilla:flush

