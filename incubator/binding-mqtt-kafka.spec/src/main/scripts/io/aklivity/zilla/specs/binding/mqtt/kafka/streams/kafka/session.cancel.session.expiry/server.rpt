property delayMillis 2000L
property expireAt ${mqtt:timestamp() + delayMillis}

accept "zilla://streams/kafka0"
        option zilla:window 8192
        option zilla:transmission "duplex"


accepted

read zilla:begin.ext ${kafka:matchBeginEx()
                            .typeId(zilla:id("kafka"))
                            .merged()
                                .capabilities("PRODUCE_AND_FETCH")
                                .topic("mqtt-sessions")
                                .groupId("mqtt-clients")
                                .filter()
                                    .header("type", "will-signal")
                                    .build()
                                .filter()
                                    .header("type", "expiry-signal")
                                    .build()
                                .build()
                            .build()}

connected

write zilla:data.ext ${kafka:dataEx()
                           .typeId(zilla:id("kafka"))
                           .merged()
                               .deferred(0)
                               .partition(-1, -1)
                               .key("client-1#will-signal")
                               .header("type", "will-signal")
                               .build()
                           .build()}
write ${mqtt:sessionSignal()
            .expiry()
                .instanceId("zilla-1")
                .clientId("client-1")
                .delay(2000)
                .expireAt(expireAt)
                .build()
            .build()}
write flush

write zilla:data.ext ${kafka:dataEx()
                           .typeId(zilla:id("kafka"))
                           .merged()
                               .deferred(0)
                               .partition(-1, -1)
                               .key("client-1#expiry-signal")
                               .hashKey("client-1")
                               .header("type", "expiry-signal")
                               .build()
                           .build()}
write flush
