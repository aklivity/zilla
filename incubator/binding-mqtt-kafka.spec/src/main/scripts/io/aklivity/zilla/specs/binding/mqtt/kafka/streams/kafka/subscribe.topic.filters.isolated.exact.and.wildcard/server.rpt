accept "zilla://streams/kafka0"
        option zilla:window 8192
        option zilla:transmission "duplex"

accepted

read zilla:begin.ext ${kafka:matchBeginEx()
                            .typeId(zilla:id("kafka"))
                            .merged()
                                .capabilities("FETCH_ONLY")
                                .topic("mqtt_messages")
                                .filter()
                                    .headers("zilla:topic")
                                        .sequence("sensor")
                                        .sequence("one")
                                        .build()
                                    .build()
                                .build()
                            .build()}

connected

read advised zilla:flush ${kafka:flushEx()
                                .typeId(zilla:id("kafka"))
                                .merged()
                                    .capabilities("FETCH_ONLY")
                                    .filter()
                                        .headers("zilla:topic")
                                            .sequence("sensor")
                                            .sequence("one")
                                            .build()
                                        .build()
                                    .filter()
                                        .headers("zilla:topic")
                                            .sequence("device")
                                            .skipMany()
                                            .build()
                                        .build()
                                    .build()
                                .build()}
