                           .merged()
                               .deferred(0)
                               .partition(-1, -1)
                               .key("client")
                               .build()
                           .build()}

write ${mqtt:session()
               .subscription("sensor/one", 1)
               .build()}
write flush

read zilla:data.ext ${kafka:matchDataEx()
                           .typeId(zilla:id("kafka"))
                           .merged()
                               .deferred(0)
                               .partition(-1, -1)
                               .key("client")
                               .build()
                           .build()}
read ${mqtt:session()
               .subscription("sensor/one", 1)
               .build()}

