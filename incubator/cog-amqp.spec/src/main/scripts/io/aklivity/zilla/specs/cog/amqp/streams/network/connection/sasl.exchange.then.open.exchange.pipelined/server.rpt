accept "zilla://streams/net#0"
  option zilla:window 8192
  option zilla:transmission "duplex"

accepted
connected

# sasl protocol header exchange
read "AMQP" [0x03 0x01 0x00 0x00]

write "AMQP" [0x03 0x01 0x00 0x00]

# sasl-mechanisms
write [0x00 0x00 0x00 0x1c]                                     # size = 28
      [0x02]                                                    # doff = 2
      [0x01]                                                    # type = SASL (1)
      [0x00 0x00]                                               # channel = 0
      [0x00 0x53 0x40]                                          # SASL method = sasl-mechanisms (64)
      [0xc0 0x0f 0x01]                                          # list type (LIST1), length = 15, fields = 1
      [0xe0 0x0c 0x01]                                          # array type (array8), length = 12, fields = 1
      [0xa3 0x09] "ANONYMOUS"                                   # mechanism = "ANONYMOUS"

# sasl-init
read [0x00 0x00 0x00 0x19]                                      # size = 25
     [0x02]                                                     # doff = 2
     [0x01]                                                     # type = SASL (1)
     [0x00 0x00]                                                # channel = 0
     [0x00 0x53 0x41]                                           # SASL method = sasl.init (65)
     [0xc0 0x0c 0x01]                                           # list type (LIST1), length = 12, fields = 1
     [0xa3 0x09] "ANONYMOUS"                                    # mechanism = "ANONYMOUS"

#sasl-outcome
write [0x00 0x00 0x00 0x10]                                     # size = 16
      [0x02]                                                    # doff = 2
      [0x01]                                                    # type = SASL (1)
      [0x00 0x00]                                               # channel = 0
      [0x00 0x53 0x44]                                          # SASL method = sasl.outcome (68)
      [0xc0 0x03 0x01]                                          # list type (LIST1), length = 3, fields = 1
      [0x50 0x00]                                               # code = okay (0)

# plain protocol header
write "AMQP" [0x00 0x01 0x00 0x00]

# open frame
write [0x00 0x00 0x00 0x16]                                       # size = 22
      [0x02]                                                      # doff = 2
      [0x00]                                                      # type = AMQP (0)
      [0x00 0x00]                                                 # channel = 0
      [0x00 0x53 0x10]                                            # performative = open (16)
      [0xc0 0x09 0x01]                                            # list type (LIST1), length = 9, fields = 1
      [0xa1 0x06] "server"                                        # container-id = "server"

# plain protocol header
read "AMQP" [0x00 0x01 0x00 0x00]

# open frame
read [0x00 0x00 0x00 0x16]                                        # size = 22
     [0x02]                                                       # doff = 2
     [0x00]                                                       # type = AMQP (0)
     [0x00 0x00]                                                  # channel = 0
     [0x00 0x53 0x10]                                             # performative = open (16)
     [0xc0 0x09 0x01]                                             # list type (LIST1), length = 9, fields = 1
     [0xa1 0x06] "client"                                         # container-id = "client"
