{
  "name": "test",
  "guards":
  {
    "test0":
    {
      "type": "test",
      "options":
      {
        "roles": [ "write:items" ]
      }
    }
  },
  "bindings":
  {
    "grpc0":
    {
      "type" : "grpc-kafka",
      "kind": "proxy",
      "routes":
      [
        {
          "guarded":
          {
            "test0": [ "write:items" ]
          },
          "exit": "kafka0",
          "when":
          [
            {
              "service": "example.EchoService",
              "method": "EchoUnary",
              "metadata":
              {
                "custom": "test"
              }
            }
          ],
          "with":
          {
            "topic": "echo",
            "acks": "leader_only",
            "overrides":
            {
              "zilla:identity": "${guarded['test0'].identity}"
            },
            "reply-to": "echo-replies",
            "filters":
            [
              {
                "key": "${guarded['test0'].identity}",
                "headers":
                {
                  "zilla:identity": "${guarded['test0'].identity}"
                }
              }
            ]
          }
        }
      ]
    }
  }
}
