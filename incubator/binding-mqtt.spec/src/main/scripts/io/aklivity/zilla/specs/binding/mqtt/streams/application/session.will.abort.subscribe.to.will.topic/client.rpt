connect "zilla://streams/app0"
         option zilla:window 8192
         option zilla:transmission "duplex"

write zilla:begin.ext ${mqtt:beginEx()
                             .typeId(zilla:id("mqtt"))
                             .session()
                                .clientId("one")
                                .expiry(1)
                                .willTopic("wills/one")
                                .willFlags("QOS0")
                                .willFormat("TEXT")
                                .willPayload("client one session expired")
                                .build()
                             .build()}

connected

read zilla:data.empty

write abort
read aborted

write notify FIRST_SESSION


connect await FIRST_SESSION
        "zilla://streams/app0"
         option zilla:window 8192
         option zilla:transmission "duplex"

write zilla:begin.ext ${mqtt:beginEx()
                             .typeId(zilla:id("mqtt"))
                             .session()
                                .clientId("client")
                                .build()
                             .build()}

connected

read zilla:data.empty

write notify SECOND_SESSION


connect await SECOND_SESSION
        "zilla://streams/app0"
         option zilla:window 8192
         option zilla:transmission "duplex"

write zilla:begin.ext ${mqtt:beginEx()
                             .typeId(zilla:id("mqtt"))
                             .subscribe()
                                .clientId("client")
                                .filter("wills/one", 1, "SEND_RETAINED")
                                .build()
                             .build()}

connected

write zilla:data.ext ${mqtt:dataEx()
                             .typeId(zilla:id("mqtt"))
                             .subscribe()
                                 .topic("wills/one")
                                 .flags("QOS0")
                                 .subscriptionId(1)
                                 .format("TEXT")
                                 .build()
                             .build()}

read "client one session expired"
