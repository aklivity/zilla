connect "zilla://streams/app0"
         option zilla:window 8192
         option zilla:transmission "duplex"

write zilla:begin.ext ${mqtt:beginEx()
                              .typeId(zilla:id("mqtt"))
                              .capabilities("PUBLISH_ONLY")
                              .clientId("client")
                              .topic("$SYS/sessions/client/#")
                              .subscriptionId(0)
                              .build()}

connected

write zilla:data.ext ${mqtt:dataEx()
                             .typeId(zilla:id("mqtt"))
                             .topic("$SYS/sessions/client/subscriptions")
                             .build()}

write '{'
      '   "subscriptions":'
      '   ['
      '     {'
      '       "id": "1",'
      '       "filter": "sensor/one",'
      '       "qos": "0"'
      '     }'
      '   ]'
      '}'

write flush

read '{'
      '   "subscriptions":'
      '   ['
      '     {'
      '       "id": "1",'
      '       "filter": "sensor/one",'
      '       "qos": "0"'
      '     }'
      '   ]'
      '}'

connect "zilla://streams/app0"
         option zilla:window 8192
         option zilla:transmission "duplex"

write zilla:begin.ext ${mqtt:beginEx()
                              .typeId(zilla:id("mqtt"))
                              .capabilities("SUBSCRIBE_ONLY")
                              .clientId("client")
                              .topic("sensor/one")
                              .flags("SEND_RETAINED")
                              .subscriptionId(1)
                              .build()}

connected
