accept "zilla://streams/app0"
        option zilla:window 8192
        option zilla:transmission "duplex"

accepted

read zilla:begin.ext ${mqtt:matchBeginEx()
                             .typeId(zilla:id("mqtt"))
                             .session()
                                .clientId("client")
                                .build()
                             .build()}
connected

write zilla:data.empty
write flush

read ${mqtt:session()
               .clientId("client")
               .subscription("sensor/one", 1, "AT_MOST_ONCE", "SEND_RETAINED")
               .subscription("sensor/two", 1, "AT_MOST_ONCE", "SEND_RETAINED")
               .build()}

read await SUBACK_TRIGGER
write ${mqtt:session()
               .clientId("client")
               .subscription("sensor/one", 1, "AT_MOST_ONCE", "SEND_RETAINED")
               .subscription("sensor/two", 1, "AT_MOST_ONCE", "SEND_RETAINED")
               .build()}
write flush

read ${mqtt:session()
               .clientId("client")
               .build()}

write ${mqtt:session()
               .clientId("client")
               .build()}
write flush


accepted

read zilla:begin.ext ${mqtt:matchBeginEx()
                             .typeId(zilla:id("mqtt"))
                             .subscribe()
                                .clientId("client")
                                .filter("sensor/one", 1, "AT_MOST_ONCE", "SEND_RETAINED")
                                .filter("sensor/two", 1, "AT_MOST_ONCE", "SEND_RETAINED")
                                .build()
                             .build()}

connected

read advised zilla:flush ${mqtt:flushEx()
                                 .typeId(zilla:id("mqtt"))
                                 .filter("sensor/two", 1, "AT_MOST_ONCE", "SEND_RETAINED")
                                 .build()}

read closed
write close
