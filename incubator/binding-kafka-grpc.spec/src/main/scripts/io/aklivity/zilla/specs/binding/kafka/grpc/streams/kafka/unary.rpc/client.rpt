connect "zilla://streams/kafka0"
    option zilla:window 8192
    option zilla:transmission "duplex"

write zilla:begin.ext ${kafka:beginEx()
                              .typeId(zilla:id("kafka"))
                              .merged()
                                  .capabilities("FETCH_ONLY")
                                  .topic("requests")
                                  .partition(-1, -2)
                                  .filter()
                                    .key("59410e57-3e0f-4b61-9328-f645a7968ac8-d41d8cd98f00b204e9800998ecf8427e")
                                    .header("zilla:service", "example.EchoService")
                                    .build()
                                  .build()
                              .build()}

connected

read zilla:data.ext ${kafka:matchDataEx()
                           .typeId(zilla:id("kafka"))
                           .merged()
                               .partition(0, 1, 2)
                               .progress(0, 2)
                               .progress(1, 1)
                               .key("59410e57-3e0f-4b61-9328-f645a7968ac8-d41d8cd98f00b204e9800998ecf8427e")
                               .header("zilla:identity", "test")
                               .header("zilla:service", "example.EchoService")
                               .header("zilla:method", "EchoUnary")
                               .header("zilla:correlation-id", "59410e57-3e0f-4b61-9328-f645a7968ac8-d41d8cd98f00b204e9800998ecf8427e")
                               .build()
                           .build()}
read ${grpc:protobuf()
           .string(1, "Hello World")
           .build()}

read zilla:data.ext ${kafka:matchDataEx()
                            .typeId(zilla:id("kafka"))
                            .merged()
                                .deferred(0)
                                .partition(-1, -1)
                                .key("59410e57-3e0f-4b61-9328-f645a7968ac8-d41d8cd98f00b204e9800998ecf8427e")
                                .header("zilla:identity", "test")
                                .header("zilla:service", "example.EchoService")
                                .header("zilla:method", "EchoUnary")
                                .header("zilla:correlation-id", "59410e57-3e0f-4b61-9328-f645a7968ac8-d41d8cd98f00b204e9800998ecf8427e")
                                .build()
                            .build()}
read zilla:data.null


write notify SENT_ASYNC_REQUEST

connect await SENT_ASYNC_REQUEST
        "zilla://streams/kafka0"
    option zilla:window 8192
    option zilla:transmission "duplex"

write zilla:begin.ext ${kafka:beginEx()
                             .typeId(zilla:id("kafka"))
                             .merged()
                                 .capabilities("PRODUCE_ONLY")
                                 .topic("responses")
                                 .partition(-1, -2)
                                 .ackMode("LEADER_ONLY")
                                 .build()
                             .build()}

connected

write zilla:data.ext ${kafka:dataEx()
                           .typeId(zilla:id("kafka"))
                           .merged()
                               .deferred(0)
                               .partition(-1, -1)
                               .key("59410e57-3e0f-4b61-9328-f645a7968ac8-d41d8cd98f00b204e9800998ecf8427e")
                               .header("zilla:correlation-id", "59410e57-3e0f-4b61-9328-f645a7968ac8-d41d8cd98f00b204e9800998ecf8427e")
                               .build()
                           .build()}
write ${grpc:protobuf()
           .string(1, "Hello World")
           .build()}
write flush

write zilla:data.ext ${kafka:dataEx()
                           .typeId(zilla:id("kafka"))
                           .merged()
                               .deferred(0)
                               .partition(-1, -1)
                               .key("59410e57-3e0f-4b61-9328-f645a7968ac8-d41d8cd98f00b204e9800998ecf8427e")
                               .header("zilla:correlation-id", "59410e57-3e0f-4b61-9328-f645a7968ac8-d41d8cd98f00b204e9800998ecf8427e")
                               .header("zilla:status", "0")
                               .build()
                           .build()}

write flush

write close
read closed

