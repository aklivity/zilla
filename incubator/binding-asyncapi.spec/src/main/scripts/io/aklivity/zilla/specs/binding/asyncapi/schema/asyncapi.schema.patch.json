[
    {
        "op": "add",
        "path": "/$defs/binding/properties/type/enum/-",
        "value": "asyncapi"
    },
    {
        "op": "add",
        "path": "/$defs/binding/allOf/-",
        "value":
        {
            "if":
            {
                "properties":
                {
                    "type":
                    {
                        "const": "asyncapi"
                    }
                }
            },
            "then":
            {
                "properties":
                {
                    "type":
                    {
                        "const": "asyncapi"
                    },
                    "kind":
                    {
                        "enum": [ "server", "client" ]
                    },
                    "vault": false,
                    "options":
                    {
                        "properties":
                        {
                            "specs":
                            {
                                "title": "Specifications",
                                "type": "array",
                                "items":
                                {
                                    "type": "string"
                                }
                            },
                            "host":
                            {
                                "title": "Host",
                                "type": "string"
                            },
                            "port":
                            {
                                "title": "Port",
                                "oneOf":
                                [
                                    {
                                        "type": "integer"
                                    },
                                    {
                                        "type": "string",
                                        "pattern": "^\\d+(-\\d+)?$"
                                    },
                                    {
                                        "type": "array",
                                        "items":
                                        {
                                            "oneOf":
                                            [
                                                {
                                                    "type": "integer"
                                                },
                                                {
                                                    "type": "string",
                                                    "pattern": "^\\d+(-\\d+)?$"
                                                }
                                            ]
                                        }
                                    }
                                ]
                            },
                            "keys":
                            {
                                "title": "Vault Keys",
                                "type": "array",
                                "items":
                                {
                                    "type": "string"
                                }
                            },
                            "trust":
                            {
                                "title": "Vault Certificates",
                                "type": "array",
                                "items":
                                {
                                    "type": "string"
                                }
                            },
                            "trustcacerts":
                            {
                                "title": "Trust CA Certificates",
                                "type": "boolean"
                            },
                            "sni":
                            {
                                "title": "Server Names",
                                "type": "array",
                                "items":
                                {
                                    "type": "string"
                                }
                            },
                            "alpn":
                            {
                                "title": "Application Protocols",
                                "type": "array",
                                "items":
                                {
                                    "type": [ "string", "null" ]
                                }
                            }
                        },
                        "additionalProperties": false
                    },
                    "routes": false
                },
                "oneOf":
                [
                    {
                        "properties":
                        {
                            "kind":
                            {
                                "const": "server"
                            }
                        },
                        "anyOf":
                        [
                            {
                                "required":
                                [
                                    "exit"
                                ]
                            },
                            {
                                "properties":
                                {
                                    "routes":
                                    {
                                        "required":
                                        [
                                            "exit"
                                        ]
                                    }
                                },
                                "required":
                                [
                                    "routes"
                                ]
                            }
                        ]
                    },
                    {
                        "properties":
                        {
                            "kind":
                            {
                                "const": "client"
                            },
                            "routes":
                            {
                                "items":
                                {
                                    "properties":
                                    {
                                        "exit": false
                                    }
                                }
                            },
                            "exit": false
                        }
                    }
                ]
            }
        }
    }
]
