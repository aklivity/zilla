[
    {
        "op": "add",
        "path": "/$defs/telemetry/exporter/properties/type/enum/-",
        "value": "stdout"
    },
    {
        "op": "add",
        "path": "/$defs/telemetry/exporter/allOf/-",
        "value":
        {
            "if":
            {
               "properties":
                {
                    "type":
                    {
                        "const": "stdout"
                    }
                }
            },
            "then":
            {
                "properties":
                {
                    "type":
                    {
                        "const": "stdout"
                    },
                    "options":
                    {
                        "properties":
                        {
                            "level":
                            {
                                "enum":
                                [
                                    "info",
                                    "warning",
                                    "error"
                                ],
                                "default": "info"
                            }
                        },
                        "additionalProperties": false
                    }
                }
            }
        }
    }
]
