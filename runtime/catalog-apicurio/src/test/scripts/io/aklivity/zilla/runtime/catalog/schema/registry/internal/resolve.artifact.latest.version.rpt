write http:content-length

write '{'
        '\"contentId\": 1,'
        '\"createdBy\": \"user1\",'
        '\"createdOn\": \"2019-05-17T12:00:00Z\",'
        '\"description\": \"The description of the artifact\",'
        '\"globalId\": 1,'
        '\"groupId\": \"groupId\",'
        '\"id\": \"artifactId\",'
        '\"type\":\"ASYNCAPI\",'
