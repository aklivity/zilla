    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>command-stop</artifactId>
      <version>${project.version}</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
